<Window x:Class="Microsoft.Test.AddIn.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sa="clr-namespace=System.AddIn.Hosting; assembly=System.AddIn"
    Title="Window1" Height="300" Width="300">
    <StackPanel>
        <StackPanel Name="PreRootPanel">
            <ListBox Name="listSecurity" />
            <ComboBox Name="comboAddIn" />
            <Button Click="AddAddIn">Add the AddIn</Button>
            <Button Click="AddAddInNewWindow">Add the AddIn in a new Window</Button>
            <Button Click="RemoveAddIns">Remove AddIns</Button>
            <Button Click="GetClickCount">Get Clicks</Button>
            <TextBox Name="txtHost"></TextBox>
        </StackPanel>
        <StackPanel Name="RootPanel">
        </StackPanel>
    </StackPanel>
</Window>
