<?xml version="1.0" encoding="utf-8"?>
<XMLVariationTemplate>
	<TemplateData>
		<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
			<DockPanel>
				<Button Width="150" Height="45">Add</Button>    
			</DockPanel>
		</Page>
	</TemplateData>

	<Scenarios>
		<Defaults>
			<FileName>Simple</FileName>
			<FileExtension>.xaml</FileExtension>
			<IsXmlDocument>true</IsXmlDocument>
			<RetainFileName>true</RetainFileName>
		</Defaults>

		<Scenario Case="0">
			<FileName>Simple</FileName>
		</Scenario>
		
		<Scenario Case="1">
			<FileName>..\Simple</FileName>
		</Scenario>
		
		<Scenario Case="2">
			<FileName>SubFolder\Simple</FileName>
		</Scenario>
		
		<Scenario Case="3">
			<FileName>SubFolder\AnotherSubFolder\Simple</FileName>
		</Scenario>    

	</Scenarios>
</XMLVariationTemplate>
