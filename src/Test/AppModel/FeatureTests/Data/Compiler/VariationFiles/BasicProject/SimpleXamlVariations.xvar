<?xml version="1.0" encoding="utf-8"?>
<XMLVariationTemplate>
  <TemplateData>
    <NodeVariation ID="1">
      <Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
          <DockPanel>
              <Button Width="150" Height="45">Add</Button>    
          </DockPanel>
      </Page>
    </NodeVariation>    
  </TemplateData>
  <Scenarios>
    <Defaults>
      <FileName>Simple</FileName>
      <FileExtension>.xaml</FileExtension>
      <IsXmlDocument>true</IsXmlDocument>
      <RetainFileName>true</RetainFileName>
    </Defaults>
    <Scenario Case="1">
      <NodeVariation ID="1">
        <Page x:Uid="Window_1"  
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xml:lang="en-US"
            Title="ResourceEditor"
            >
              <Grid x:Uid="Grid_1" DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                <ColumnDefinition x:Uid="ColumnDefinition_1" Width="1*"/>
                <ColumnDefinition x:Uid="ColumnDefinition_2" Width="9*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                <RowDefinition x:Uid="RowDefinition_1" Height="0.5*"/>
                <RowDefinition x:Uid="RowDefinition_2" Height="3*"/>
                <RowDefinition x:Uid="RowDefinition_3" Height="3*"/>
                <RowDefinition x:Uid="RowDefinition_4" Height="3*"/>
                <RowDefinition x:Uid="RowDefinition_5" Height="0.5*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Uid="TextBlock_1"  Grid.Column="0" Grid.Row="1">Key:</TextBlock>
                <TextBox x:Uid="TextBox_1" Grid.Column="1" Grid.Row="1" Name="editkey">Avalon</TextBox>
                <TextBlock x:Uid="TextBlock_2" Grid.Column="0" Grid.Row="2">Value:</TextBlock>
                <TextBox x:Uid="TextBox_2" Grid.Column="1" Grid.Row="2" Name="editvalue">Globalization</TextBox>
                <StackPanel x:Uid="StackPanel_1" Orientation="Horizontal" Grid.Column="1" Grid.Row="3" >
                  <Button x:Uid="Button_1" Margin="5" Localization.Comments = "$Content ( Trademark &lt;&gt;&quot;&apos;&amp; ) FontSize ( Trademark font size )">Save</Button>
                  <Button x:Uid="Button_2" Margin="5" >Cancel</Button>
                </StackPanel>
              </Grid>
        </Page>
      </NodeVariation>          
      <FileName>SimpleLoc</FileName>
    </Scenario>
    <Scenario Case="2">
      <NodeVariation ID="1">
        <Page x:Uid="Window_2"  
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xml:lang="en-US"
            Title="ResourceEditor"
            >
              <Grid x:Uid="Grid_1" DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                <ColumnDefinition x:Uid="ColumnDefinition_1" Width="1*"/>
                <ColumnDefinition x:Uid="ColumnDefinition_2" Width="9*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                <RowDefinition x:Uid="RowDefinition_1" Height="0.5*"/>
                <RowDefinition x:Uid="RowDefinition_2" Height="3*"/>
                <RowDefinition x:Uid="RowDefinition_3" Height="3*"/>
                <RowDefinition x:Uid="RowDefinition_4" Height="3*"/>
                <RowDefinition x:Uid="RowDefinition_5" Height="0.5*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Uid="TextBlock_1"  Grid.Column="0" Grid.Row="1">Key:</TextBlock>
                <TextBox x:Uid="TextBox_1" Grid.Column="1" Grid.Row="1" Name="editkey">Avalon</TextBox>
                <TextBlock x:Uid="TextBlock_2" Grid.Column="0" Grid.Row="2">Value:</TextBlock>
                <TextBox x:Uid="TextBox_2" Grid.Column="1" Grid.Row="2" Name="editvalue">Globalization</TextBox>
                <StackPanel x:Uid="StackPanel_1" Orientation="Horizontal" Grid.Column="1" Grid.Row="3" >
                  <Button x:Uid="Button_3" Margin="5" Localization.Comments = "$Content ( Trademark &lt;&gt;&quot;&apos;&amp; ) FontSize ( Trademark font size )">Save</Button>
                  <Button x:Uid="Button_4" Margin="5" >Cancel</Button>
                </StackPanel>
              </Grid>
        </Page>
      </NodeVariation>          
      <FileName>SimpleLoc2</FileName>
    </Scenario>
  </Scenarios>    
</XMLVariationTemplate>
