<Page
    x:Class="GetCookieXbap.Page1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowTitle="Cookies Sample"
    Initialized="OnLoaded"
    Name="CookiePage">

  <Grid>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <Label Grid.Row="0" Grid.Column="0">Set Cookie Value:</Label>
    <TextBox Grid.Row="0" Grid.Column="1" Name="setCookieValueTextBox">Cookie1=Value1</TextBox>
    <Button Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right" Name="setCookieButton" >Set Cookie</Button>
    <Label Grid.Row="1" Grid.Column="0">Get Cookie Value:</Label>
    <TextBox Grid.Row="1" Grid.Column="1" Name="getCookieValueTextBox"></TextBox>
    <Button Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" Name="getCookieButton" >Get Cookie</Button>

  </Grid>
  
</Page>
