<AppMonitorConfig>
 <Using Namespace="Microsoft.Test.Deployment" Assembly="DeploymentCommonLibrary"/>
     <Steps>
       
        <FileHostStep>
           <FileHostStep.SupportFiles>
                <SupportFile Name="deploy_markup2.xaml" IncludeDependencies="true" />
           </FileHostStep.SupportFiles>

	<TestLogStep Name="Navigate Loose .XAML Markup Test Log - Local">
           <ActivationStep Method="Navigate" Scheme="Local" FileName="deploy_markup2.xaml">
              <ActivationStep.UIHandlers>
                 <PassIfSeenHandler AutomationElementAndValue="xamlTestButton;LooseXaml" ProcessName="iexplore" WindowTitle="RegExp:(Loose XAML 2)"  />
                 <BrowserAppExceptionHandler Action="LogAndFailIfSeen" WindowTitle="property:Microsoft.Test.Loaders.ApplicationDeploymentHelper.ErrorPageTitle, TestRuntime" ProcessName="IEXPLORE" />               
