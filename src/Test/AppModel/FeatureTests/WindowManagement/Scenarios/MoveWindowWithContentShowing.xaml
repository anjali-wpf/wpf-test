<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="WindowTest.MoveWindowWithContentShowing"
     Title="Avalon.Window.Test"
     Name="AvalonWindow"
     Top="100"
     Left="100"
     Width="200"
     Height="200"
     Activated="OnActivated"
     LocationChanged="OnLocationChanged"
     >

        <Window.Triggers>
    		<EventTrigger RoutedEvent="FrameworkElement.Loaded">
    			<EventTrigger.Actions>
    				<BeginStoryboard>
    					<Storyboard TargetName="AvalonWindow">
						<DoubleAnimation
       Storyboard.TargetProperty="(Window.Top)"
       BeginTime="0:0:2"
       From="0"
       To="600"
       Duration="0:0:4"
       RepeatBehavior="1x"
       AutoReverse="False" />
							
			             <DoubleAnimation
                 Storyboard.TargetProperty="(Window.Left)"
                 BeginTime="0:0:2"
                 From="0"
                 To="600"
                 Duration="0:0:4"
                 RepeatBehavior="1x"
                 AutoReverse="False" />
		             	</Storyboard>
					</BeginStoryboard>
				</EventTrigger.Actions>
			</EventTrigger>
		</Window.Triggers>

        <StackPanel>
             <Button>Button1</Button>
        </StackPanel>
</Window>

