<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="WindowTest.CallCloseInSizeChanged"
     Title="Avalon.Window.Test"
     Closed="OnClosed"
       ContentRendered="OnContentRendered"
     Name="AvalonWindow"
     Top="0"
     Left="0"
     Width="250" 
>

        <Window.Triggers>
    		<EventTrigger RoutedEvent="FrameworkElement.Loaded">
    			<EventTrigger.Actions>
    				<BeginStoryboard>
    					<Storyboard TargetName="AvalonWindow">
						<DoubleAnimation
       Storyboard.TargetProperty="(Window.Width)"
       BeginTime="0:0:2"
       From="200"
       To="250"
       Duration="0:0:2"
       RepeatBehavior="1x"
       AutoReverse="False" />
						</Storyboard>
					</BeginStoryboard>
				</EventTrigger.Actions>
			</EventTrigger>
		</Window.Triggers>

		<DockPanel>
		    <TextBox Width="150" Height="50" />
		</DockPanel>		
		
</Window>

