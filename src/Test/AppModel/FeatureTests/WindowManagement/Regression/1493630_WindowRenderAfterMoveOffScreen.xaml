<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     x:Class="WindowTest.REGRESSION_WindowRenderAfterMoveOffScreen"
     Name="AvalonWindow" 
     Title="Window Test" 
     Loaded="OnLoaded"
     Background="Blue"
     ResizeMode="CanResizeWithGrip" 
     Top="0"
     Left="0"
     Width="300"
     Height="300"
     xmlns:MappingPIGen1="clr-namespace:Microsoft.Windows.Test.Client.AppSec.BVT.ELCommon"
     >

    <Window.Triggers>
      <EventTrigger RoutedEvent="FrameworkElement.Loaded">
        <EventTrigger.Actions>
          <BeginStoryboard>
            <Storyboard Name="resizeStoryBoard" TargetName="AvalonWindow">
              <DoubleAnimation  Storyboard.TargetProperty="(Window.Left)"
                                BeginTime="0:0:2"
                                From="0"
                                To="-50"
                                Duration="0:0:6"
                                RepeatBehavior="1x"
                                AutoReverse="False" 
                                FillBehavior="Stop"/>

              <DoubleAnimation  Storyboard.TargetProperty="(Window.Top)"
                                BeginTime="0:0:2"
                                From="0"
                                To="-50"
                                Duration="0:0:6"
                                RepeatBehavior="1x"
                                AutoReverse="False" 
                                FillBehavior="Stop"/>
              <DoubleAnimation  Storyboard.TargetProperty="(Window.Width)"
                                BeginTime="0:0:2"
                                From="300"
                                To="350"
                                Duration="0:0:6"
                                RepeatBehavior="1x"
                                AutoReverse="False" 
                                FillBehavior="Stop"/>

              <DoubleAnimation  Storyboard.TargetProperty="(Window.Height)"
                                BeginTime="0:0:2"
                                From="300"
                                To="350"
                                Duration="0:0:6"
                                RepeatBehavior="1x"
                                AutoReverse="False" 
                                FillBehavior="Stop"/>
            </Storyboard>
          </BeginStoryboard>
        </EventTrigger.Actions>
      </EventTrigger>
    </Window.Triggers>

  <StackPanel Orientation="Horizontal">
    <Button Width="100" Height="200" Background="Green">Button</Button>
  </StackPanel>
</Window>

