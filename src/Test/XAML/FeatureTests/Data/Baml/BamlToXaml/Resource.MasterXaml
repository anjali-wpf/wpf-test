<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:MappingPIGen1="clr-namespace:System.Windows.Media;assembly=PresentationCore" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <DockPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:mil="clr-namespace:System.Windows.Media;assembly=PresentationCore" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel.Children>
      <Button x:ConnectionId="1" Name="b1" Background="{DynamicResource YellowBrush}">hello</Button>
      <Button x:ConnectionId="2" Name="b2" Width="20" Height="30" Background="{DynamicResource RedBrush}" Foreground="{DynamicResource YellowBrush}">ClickMe</Button>
      <Button x:ConnectionId="3" Name="b3" Width="10" Height="40" Background="{DynamicResource GreenBrush}">ClickMe</Button>
      <Button x:ConnectionId="4" Name="b4" Width="40" Height="20" Background="{DynamicResource BlueBrush}">ClickMe</Button>
    </DockPanel.Children>
    <DockPanel.Resources>
      <SolidColorBrush x:Key="GreenBrush">
        <SolidColorBrush.Color>
          <Color A="255" G="255" />
        </SolidColorBrush.Color>
      </SolidColorBrush>
      <SolidColorBrush x:Key="BlueBrush">
        <SolidColorBrush.Color>
          <Color A="255" B="255" />
        </SolidColorBrush.Color>
      </SolidColorBrush>
      <SolidColorBrush x:Key="YellowBrush">
        <SolidColorBrush.Color>
          <Color A="255" R="255" G="255" />
        </SolidColorBrush.Color>
      </SolidColorBrush>
      <SolidColorBrush x:Key="RedBrush">
        <SolidColorBrush.Color>
          <Color A="255" R="255" />
        </SolidColorBrush.Color>
      </SolidColorBrush>
    </DockPanel.Resources>
  </DockPanel>
</Page>