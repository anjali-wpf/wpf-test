<Window x:Class="RegressionIssue47.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:w="clr-namespace:RegressionIssue47"
        Loaded="OnLoaded">

    <Window.Resources>
        <ResourceDictionary>
            <Binding x:Key="xImgBinding" Source="{x:Static w:Window1.Img}"/>
            <Style TargetType="Image">
                <Setter Property="Image.Source" Value="{StaticResource xImgBinding}" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

</Window>
