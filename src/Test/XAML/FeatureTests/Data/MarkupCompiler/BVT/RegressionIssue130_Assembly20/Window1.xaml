<Window x:Class="RegressionIssue130_Assembly20.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        Loaded="OnLoaded">

    <Grid>
        <ScrollViewer Grid.Row="1">
            <ItemsPanelTemplate>
                <ItemsControl Name="list">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Name="content" Orientation="Horizontal" Cursor="Hand">
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </ItemsPanelTemplate>
        </ScrollViewer>
    </Grid>

</Window>
