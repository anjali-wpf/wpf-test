<Project DefaultTargets="Restore;Build" Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>XamlToBaml</AssemblyName>
    <OutputType>WinExe</OutputType>
    <Configuration>Release</Configuration>
    <OutputPath>bin\Release\</OutputPath>
    <OptionStrict>true</OptionStrict>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <EnableDefaultItems>false</EnableDefaultItems>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <ApplicationDefinition Include="App.xaml" />
    <Page Include="XamlToBaml.xaml" />
    <Compile Include="XamlToBaml.xaml.cs" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="XamlClrTypes.dll" />
    <Reference Include="XamlWpfTypes.dll" />
  </ItemGroup>

</Project>
