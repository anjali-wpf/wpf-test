<!-- Scenario: x:Argument containing an object with x:Arguments -->
<Page
    xmlns       = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:co    = "http://XamlTestTypes">

    <co:CustomFactoryNested>
        <x:Arguments>
            <x:Double>1</x:Double>
            <co:SimpleCustomObject>
                <x:Arguments>
                    <x:String>aaa</x:String>
                </x:Arguments>
            </co:SimpleCustomObject>
            <x:Double>2</x:Double>
        </x:Arguments>
    </co:CustomFactoryNested>

</Page>