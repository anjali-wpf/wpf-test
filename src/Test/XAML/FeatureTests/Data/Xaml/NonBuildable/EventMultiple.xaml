<!-- Multiple Events -->
<Grid
    xmlns               = 'http://schemas.microsoft.com/winfx/2006/xaml/presentation'
    PreviewMouseDown    = 'OnPreviewMouseDownGrid'
    Background          = 'Lavender'>

    <Canvas>

        <Button Click='OnClick' GotFocus='OnGotFocus' PreviewMouseDown='OnPreviewMouseDownButton' MouseEnter='OnMouseEnter' />
        <TextBox TextChanged='OnTextChanged' />
        <TreeView SelectionItemChanged='' />

    </Canvas>

</Grid>
