<Page 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:f="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    >

    <Page.Resources>
        <ControlTemplate x:Key="RedEl">
            <Ellipse f:Freeze="true" Fill="Red"/>
        </ControlTemplate>
    </Page.Resources>

    <Grid>
        <Button Template="{StaticResource RedEl}" />
    </Grid>

</Page>
