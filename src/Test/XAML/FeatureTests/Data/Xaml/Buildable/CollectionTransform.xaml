<StackPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">

    <Expander
        Height          = "150"
        Width           = "150"
        ExpandDirection = "Left">
        <Expander.Content>ABC</Expander.Content>
        <Expander.RenderTransform>
            <TransformGroup>
                <TransformGroup.Children>
                    <TransformCollection>
                        <ScaleTransform ScaleX="1.5" ScaleY=".5" />
                        <TranslateTransform X="50" Y="50" />
                        <SkewTransform AngleY="-20" />
                        <TranslateTransform X="10" Y="10" />
                        <ScaleTransform ScaleX="1.5" ScaleY="0.75" />
                        <SkewTransform AngleX="1.5" AngleY="0.9" />
                        <RotateTransform Angle="25" />
                        <ScaleTransform ScaleX="1.2" ScaleY="1.3" CenterX="10" CenterY="10" />
                        <RotateTransform Angle="2" CenterX="15" CenterY="15" />
                    </TransformCollection>
                </TransformGroup.Children>
            </TransformGroup>
        </Expander.RenderTransform>
    </Expander>
    
</StackPanel>

