<Border xmlns='http://schemas.microsoft.com/winfx/2006/xaml/presentation'>
    <FlowDocumentScrollViewer HorizontalAlignment="Left" VerticalAlignment="Top">
        <FlowDocument FlowDirection="RightToLeft">
            <Table>
              <Table.Columns>
                <TableColumn Width="100px" Background="Gray" />
                <TableColumn Width="100px" Background="lightgreen" />
                <TableColumn Width="100px" Background="lightblue" />
                <TableColumn Width="100px" Background="lightpink" />
              </Table.Columns>

                <TableRowGroup>
                    <TableRow>
                        <TableCell><Paragraph>ABC</Paragraph></TableCell>
                        <TableCell><Paragraph>DEF</Paragraph></TableCell>
                        <TableCell><Paragraph>GHI</Paragraph></TableCell>
                        <TableCell><Paragraph>JKL</Paragraph></TableCell>
                    </TableRow>
                    <TableRow>
                        <TableCell><Paragraph>MNO</Paragraph>
                    </TableCell>
                        <TableCell><Paragraph>PQR</Paragraph></TableCell>
                        <TableCell><Paragraph>STU</Paragraph></TableCell>
                        <TableCell><Paragraph></Paragraph></TableCell>

                    </TableRow>
                </TableRowGroup>
            </Table>
        </FlowDocument>
    </FlowDocumentScrollViewer>
</Border>