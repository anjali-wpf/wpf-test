<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" x:Key="Brush1">
        <GradientStop Color="#FFFFFFFF" Offset="0"/>
        <GradientStop Color="#FFE2E223" Offset="0.9"/>
    </LinearGradientBrush>

    <Style TargetType="{x:Type Button}" x:Key="ButtonStyle1">
        <Setter Property="Background" Value="{StaticResource Brush1}"/>
    </Style>
</ResourceDictionary>