<Canvas xmlns   = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
        x:Uid="CV1" Background="MistyRose">

    <StackPanel  x:Uid="SP1" Height="50">
        <TextBox x:Uid="TB1" Width="45" AllowDrop="true" />
        <Button  x:Uid="BN1" Opacity="0.5" />
    </StackPanel>

    <StackPanel  x:Uid="SP2" Focusable="false">
        <TextBox x:Uid="TB2" Visibility="Collapsed" />
        <Button  x:Uid="BN2" ClipToBounds="false" />
    </StackPanel>

</Canvas>
