<Canvas xmlns   ="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x ="http://schemas.microsoft.com/winfx/2006/xaml">

    <Canvas.Resources>
        <ImageBrush x:Key="MyBrush">

            <ImageBrush.Stretch>
                UniformToFill
            </ImageBrush.Stretch>

            <ImageBrush.Viewport>
                0,0,1,1
            </ImageBrush.Viewport>

            <ImageBrush.ViewportUnits>
                RelativeToBoundingBox
            </ImageBrush.ViewportUnits>

        </ImageBrush>                           
    </Canvas.Resources>

</Canvas>