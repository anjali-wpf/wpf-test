<!-- ControlTemplate inside the target element's Resources -->
<Page
    xmlns   = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml" > 

    <DockPanel>
        <Button Template='{DynamicResource TestTemplate}'>
            <Button.Resources>
                <ControlTemplate x:Key='TestTemplate'>
                    <InkCanvas Width="100" Height="100" Background="Maroon" />
                </ControlTemplate>
           </Button.Resources>
        </Button>
    </DockPanel>
  
</Page>

