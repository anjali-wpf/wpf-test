<Style
        xmlns='http://schemas.microsoft.com/winfx/2006/xaml/presentation'
        xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml'
        TargetType='Button'>
  <Style.Resources>
    <ResourceDictionary >
      <Color x:Key='c1'>Blue</Color>
      <SolidColorBrush x:Key='b1' Color='{StaticResource c1}' />
    </ResourceDictionary>
  </Style.Resources>
  <Setter Property='Background' Value='{StaticResource b1}' />  
</Style>
