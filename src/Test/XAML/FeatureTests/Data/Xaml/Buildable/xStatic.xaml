<Page
    xmlns   = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <DockPanel
        Background  = "Lavender"
        Width       = "300"
        Height      = "300"
        >
        <DockPanel>
            <Rectangle Height="20" DockPanel.Dock="{x:Static Dock.Bottom}" Fill="{x:Static Brushes.DarkViolet}" />
            <Rectangle Width="20"  DockPanel.Dock="{x:Static Dock.Right}"  Fill="{x:Static Brushes.MediumTurquoise}"/>
            <Rectangle Fill="BlueViolet" />
        </DockPanel>
    </DockPanel>

</Page>