<!-- x:String inside a ListBox / Button.Content (with Preserve) -->
<DockPanel
    xmlns       = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml">

    <ListBox>
        <x:String>A B C</x:String>
        <x:String>25</x:String>
        <x:String>zzzzzzzzzzzzz</x:String>
    </ListBox>

    <Button>
      <Button.Content>
        <x:String xml:space="preserve">   </x:String>
      </Button.Content>
    </Button>

</DockPanel>