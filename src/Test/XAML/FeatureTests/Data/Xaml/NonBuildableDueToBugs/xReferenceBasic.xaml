<StackPanel
    xmlns='http://schemas.microsoft.com/winfx/2006/xaml/presentation'
    xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml'>
    <Button>
        <Button.Background>
           <RadialGradientBrush x:Name="RefName">
               <GradientStop Offset="0" Color="White" />
               <GradientStop Offset="1" Color="Blue" />
           </RadialGradientBrush>
       </Button.Background>
    </Button>
    <Button Height='90' Width='170' Background="{x:Reference RefName}" Content="button 2"/>
</StackPanel>
