<!-- x:String for an element inside a ControlTemplate -->
<Page
    xmlns       = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml">

    <Button Style="{x:Null}">
        <Button.Template>
        
            <ControlTemplate TargetType="{x:Type Button}">
                <Button>
                    <x:String>StringText</x:String>
                </Button>
            </ControlTemplate>
            
        </Button.Template>
    </Button>

</Page>