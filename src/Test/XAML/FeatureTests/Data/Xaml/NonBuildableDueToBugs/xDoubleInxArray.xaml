<!-- x:Double inside x:Array, with combinations of sys -->
<Page xmlns='http://schemas.microsoft.com/winfx/2006/xaml/presentation'>

    <x:Array
        Type        = "sys:Double"
        xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys   = "clr-namespace:System;assembly=mscorlib">

        <x:Double>0</x:Double>
        <x:Double>-25.4</x:Double>
        <x:Double>999999999999999999999999999999999999999999999999999999999</x:Double>

    </x:Array>

    <x:Array
        xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml">

        <x:Double>0</x:Double>
        <x:Double>-25.4</x:Double>
        <x:Double>999999999999999999999999999999999999999999999999999999999</x:Double>

    </x:Array>

    <sys:Array
        Type        = "x:Double"
        xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys   = "clr-namespace:System;assembly=mscorlib">

        <x:Double>0</x:Double>
        <x:Double>-25.4</x:Double>
        <x:Double>999999999999999999999999999999999999999999999999999999999</x:Double>

    </sys:Array>

</Page>