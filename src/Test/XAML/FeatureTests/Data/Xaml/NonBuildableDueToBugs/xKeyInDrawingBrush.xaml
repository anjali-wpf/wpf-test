<!-- x:Key Directive Property Element in multiple places inside a DrawingBrush  -->
<Page
    xmlns       = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml">

    <Canvas>        
        <Ellipse>
            <Ellipse.Fill>
                <DrawingBrush>
                    <DrawingBrush.Drawing>
                        <GeometryDrawing>
                            <GeometryDrawing.Pen>
                                <Pen>
                                    <Pen.Brush>
                                        <LinearGradientBrush>
                                            <x:Key>BrushKey1</x:Key>
                                            <GradientStop><x:Key>StopKey1</x:Key></GradientStop>
                                            <x:Key>BrushKey2</x:Key>
                                            <GradientStop><x:Key>StopKey2</x:Key></GradientStop>
                                            <x:Key>BrushKey3</x:Key>
                                        </LinearGradientBrush>
                                    </Pen.Brush>
                                    <x:Key>PenKey</x:Key>
                                </Pen>
                            </GeometryDrawing.Pen>
                            <x:Key>GeometryDrawingKey</x:Key>
                        </GeometryDrawing>
                    </DrawingBrush.Drawing>
                    <x:Key>DrawingBrushKey</x:Key>
                </DrawingBrush>
            </Ellipse.Fill>
            <x:Key>EllipseKey</x:Key>
        </Ellipse>
    </Canvas>

</Page>