<!-- x:Key Directive Property Element with other property elements -->
<Page
    xmlns       = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel>

        <Button><Button.Background>Blue</Button.Background><x:Key>Value1</x:Key><Button.Opacity>0.5</Button.Opacity></Button>

        <Button>
            <Button.Background>Blue</Button.Background>
            <x:Key>Value1</x:Key>
            <Button.Opacity>0.5</Button.Opacity>
        </Button>

        <Button>
            <x:Key>Value2</x:Key>
            <Button.Background>Blue</Button.Background>
            <Button.Opacity>0.5</Button.Opacity>
        </Button>

        <Button>
            <Button.Background>Blue</Button.Background>
            <Button.Opacity>0.5</Button.Opacity>
            <x:Key>Value3</x:Key>
        </Button>

    </StackPanel>

</Page>