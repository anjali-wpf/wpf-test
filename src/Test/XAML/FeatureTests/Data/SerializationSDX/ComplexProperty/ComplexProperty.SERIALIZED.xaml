<CustomDockPanel xmlns="clr-namespace:Microsoft.Test.Serialization.CustomElements;assembly=TestRuntime" xmlns:av="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <CustomDockPanel.Resources>
    <av:LinearGradientBrush x:Key="MyBrush">
      <av:LinearGradientBrush.GradientStops>
        <av:GradientStop Offset="0.2" Color="#FFFF0000" />
        <av:GradientStop Offset="0.4" Color="#FF0000FF" />
        <av:GradientStop Offset="0.6" Color="#FF008000" />
      </av:LinearGradientBrush.GradientStops>
    </av:LinearGradientBrush>
  </CustomDockPanel.Resources>
  <av:Button Name="Button0" Background="#6400FF00">Hey Dude</av:Button>
  <av:Button Name="Button1" Background="{av:DynamicResource MyBrush}" />
</CustomDockPanel>