<Section Background="#FFD3D3D3" FontSize="16" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:s="clr-namespace:System;assembly=mscorlib" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Section.Resources>
    <Style TargetType="Bold" x:Key="bold">
      <Style.Resources>
        <ResourceDictionary />
      </Style.Resources>
      <Setter Property="TextElement.FontSize">
        <Setter.Value>
          <s:Double>24</s:Double>
        </Setter.Value>
      </Setter>
    </Style>
    <Style TargetType="Italic" x:Key="italic">
      <Style.Resources>
        <ResourceDictionary />
      </Style.Resources>
      <Setter Property="TextElement.FontSize">
        <Setter.Value>
          <s:Double>24</s:Double>
        </Setter.Value>
      </Setter>
    </Style>
  </Section.Resources>
  <Paragraph TextAlignment="Center">
    <LineBreak />
    <Bold Style="{DynamicResource bold}">I'm a styled Bold element.</Bold>
    <LineBreak />
    <Bold FontSize="24">I'm a Bold element that is not styled.</Bold>
    <LineBreak />
    <Italic Style="{DynamicResource italic}">I'm a styled Italic element.</Italic>
    <LineBreak />
    <Italic FontSize="24">I'm an Italic element that is not styled.</Italic>
    <LineBreak />
  </Paragraph>
</Section>