<FlowDocumentPageViewer xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <FlowDocument PageHeight="400" Background="#FFFFFFFF" PageWidth="400" PagePadding="15,15,15,15">
    <FlowDocument.Resources>
      <Style TargetType="Figure" x:Key="{x:Type Figure}">
        <Style.Resources>
          <ResourceDictionary />
        </Style.Resources>
        <Setter Property="Block.Margin">
          <Setter.Value>
            <Thickness>0,0,0,0</Thickness>
          </Setter.Value>
        </Setter>
        <Setter Property="Block.Padding">
          <Setter.Value>
            <Thickness>0,0,0,0</Thickness>
          </Setter.Value>
        </Setter>
      </Style>
      <Style TargetType="Paragraph" x:Key="{x:Type Paragraph}">
        <Style.Resources>
          <ResourceDictionary />
        </Style.Resources>
        <Setter Property="Block.Margin">
          <Setter.Value>
            <Thickness>0,0,0,0</Thickness>
          </Setter.Value>
        </Setter>
        <Setter Property="Block.Padding">
          <Setter.Value>
            <Thickness>0,0,0,0</Thickness>
          </Setter.Value>
        </Setter>
      </Style>
    </FlowDocument.Resources>
    <Paragraph>
      <Figure VerticalAnchor="PageTop" Background="#FFADD8E6" HorizontalAnchor="PageLeft">
        <Paragraph>Figure 1.</Paragraph>
      </Figure> <Figure VerticalAnchor="PageTop" Width="100" Background="#FFFFC0CB" HorizontalAnchor="PageLeft"><Paragraph>Figure 2. Width="100"</Paragraph></Figure> <Figure Height="30" VerticalAnchor="PageTop" Background="#FFADD8E6" HorizontalAnchor="PageLeft"><Paragraph>Figure 3. Height="30"</Paragraph></Figure> <Figure Height="30" VerticalAnchor="PageTop" Width="70" Background="#FFFFC0CB" HorizontalAnchor="PageLeft"><Paragraph>Figure 4. Width="70" Height="30"</Paragraph></Figure> <Figure Height="5" VerticalAnchor="PageTop" Width="5" Background="#FFADD8E6" HorizontalAnchor="PageLeft"><Paragraph>Figure 5. Width="5" Height="5"</Paragraph></Figure> <Figure Height="15" VerticalAnchor="PageTop" Width="500" Background="#FFADD8E6" HorizontalAnchor="PageLeft"><Paragraph>Figure 6. Width="500" Height="15"</Paragraph></Figure></Paragraph>
  </FlowDocument>
</FlowDocumentPageViewer>