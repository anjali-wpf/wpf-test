<CustomCanvas xmlns="clr-namespace:Microsoft.Test.Serialization.CustomElements;assembly=TestRuntime" xmlns:av="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
  <CustomCanvas.Background>
    <av:LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
      <av:GradientStop Color="#FF008000" Offset="0" />
      <av:GradientStop Color="#FFFFFFFF" Offset="1" />
    </av:LinearGradientBrush>
  </CustomCanvas.Background>
  <av:Decorator Name="TransformDecorator">
    <av:Decorator.RenderTransform>
      <av:TransformGroup>
        <av:TranslateTransform X="10" Y="10" />
        <av:ScaleTransform ScaleX="1.5" ScaleY="0.75" />
        <av:SkewTransform AngleX="1.5" AngleY="0.9" />
        <av:RotateTransform Angle="25" />
        <av:ScaleTransform CenterX="30" CenterY="30" ScaleX="1.2" ScaleY="1.3" />
        <av:RotateTransform Angle="2" CenterX="45" CenterY="45" />
      </av:TransformGroup>
    </av:Decorator.RenderTransform>
    <av:Rectangle Height="100" Name="Rectangle" Stroke="#FF0000FF" StrokeThickness="2" Width="100">
      <av:Rectangle.Fill>
        <av:LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
          <av:GradientStop Color="#FFFF0000" Offset="0" />
          <av:GradientStop Color="#FF0000FF" Offset="1" />
        </av:LinearGradientBrush>
      </av:Rectangle.Fill>
    </av:Rectangle>
  </av:Decorator>
</CustomCanvas>