<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
  <DockPanel>
    <DockPanel.Resources>
      <Style TargetType="Button">
        <Style.Resources>
          <ResourceDictionary />
        </Style.Resources>
        <Setter Property="TextElement.Foreground">
          <Setter.Value>
            <SolidColorBrush>#FFFF0000</SolidColorBrush>
          </Setter.Value>
        </Setter>
      </Style>
    </DockPanel.Resources>
    <DockPanel>
      <Button>Implicit styling</Button>
    </DockPanel>
  </DockPanel>
</Page>