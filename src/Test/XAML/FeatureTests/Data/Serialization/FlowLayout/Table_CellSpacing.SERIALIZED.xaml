<FlowDocumentScrollViewer xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
  <FlowDocument>
    <Table Background="#FFFFFFFF">
      <TableRowGroup>
        <TableRow>
          <TableCell>
            <Paragraph>CellSpacing="Auto"</Paragraph>
          </TableCell>
          <TableCell>
            <Paragraph>Adjacent cell</Paragraph>
          </TableCell>
        </TableRow>
        <TableRow>
          <TableCell>
            <Paragraph>Adjacent TableRow</Paragraph>
          </TableCell>
          <TableCell>
            <Paragraph>just some text</Paragraph>
          </TableCell>
        </TableRow>
      </TableRowGroup>
    </Table>
    <Table Background="#FFFFC0CB" CellSpacing="40">
      <TableRowGroup>
        <TableRow>
          <TableCell>
            <Paragraph>CellSpacing="40%"</Paragraph>
          </TableCell>
          <TableCell>
            <Paragraph>Adjacent cell</Paragraph>
          </TableCell>
        </TableRow>
        <TableRow>
          <TableCell>
            <Paragraph>Adjacent TableRow</Paragraph>
          </TableCell>
          <TableCell>
            <Paragraph>just some text</Paragraph>
          </TableCell>
        </TableRow>
      </TableRowGroup>
    </Table>
    <Table Background="#FFF5DEB3" CellSpacing="50">
      <TableRowGroup>
        <TableRow>
          <TableCell>
            <Paragraph>CellSpacing="50px"</Paragraph>
          </TableCell>
          <TableCell>
            <Paragraph>Adjacent cell</Paragraph>
          </TableCell>
        </TableRow>
        <TableRow>
          <TableCell>
            <Paragraph>Adjacent TableRow</Paragraph>
          </TableCell>
          <TableCell>
            <Paragraph>just some text</Paragraph>
          </TableCell>
        </TableRow>
      </TableRowGroup>
    </Table>
  </FlowDocument>
</FlowDocumentScrollViewer>