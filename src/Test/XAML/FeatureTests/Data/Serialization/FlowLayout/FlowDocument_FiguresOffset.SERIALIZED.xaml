<Section xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Section.Resources>
    <Style TargetType="Figure" x:Key="{x:Type Figure}">
      <Style.Resources>
        <ResourceDictionary />
      </Style.Resources>
      <Setter Property="Block.Margin">
        <Setter.Value>
          <Thickness>0,0,0,0</Thickness>
        </Setter.Value>
      </Setter>
      <Setter Property="Block.Padding">
        <Setter.Value>
          <Thickness>0,0,0,0</Thickness>
        </Setter.Value>
      </Setter>
    </Style>
    <Style TargetType="Paragraph" x:Key="{x:Type Paragraph}">
      <Style.Resources>
        <ResourceDictionary />
      </Style.Resources>
      <Setter Property="Block.Margin">
        <Setter.Value>
          <Thickness>0,0,0,0</Thickness>
        </Setter.Value>
      </Setter>
      <Setter Property="Block.Padding">
        <Setter.Value>
          <Thickness>0,0,0,0</Thickness>
        </Setter.Value>
      </Setter>
    </Style>
  </Section.Resources>
  <Paragraph>
    <Figure VerticalAnchor="PageTop" VerticalOffset="5" Background="#FF90EE90" HorizontalOffset="5" HorizontalAnchor="PageLeft">
      <Paragraph>Figure 1. VerticalAnchor="PageTop" VerticalOffset="5" HorizontalAnchor="PageLeft" HorizontalOffset="5"</Paragraph>
    </Figure> <Figure VerticalAnchor="PageBottom" VerticalOffset="-50" Background="#FFFFB6C1" HorizontalOffset="-5" HorizontalAnchor="PageRight"><Paragraph>Figure 3. VerticalAnchor="PageBottom" VerticalOffset="-50" HorizontalAnchor="PageRight" HorizontalOffset="-5"</Paragraph></Figure> <Figure VerticalAnchor="PageCenter" VerticalOffset="0" Background="#FFFFA500" HorizontalOffset="50" HorizontalAnchor="PageRight"><Paragraph>Figure 5. VerticalAnchor="PageCenter" VerticalOffset="0" HorizontalAnchor="PageRight" HorizontalOffset="50"</Paragraph></Figure></Paragraph>
</Section>