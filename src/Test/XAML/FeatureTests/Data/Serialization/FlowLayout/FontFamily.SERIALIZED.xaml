<StackPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:s="clr-namespace:System;assembly=mscorlib" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <StackPanel.Resources>
    <Style TargetType="Paragraph" x:Key="{x:Type Paragraph}">
      <Style.Resources>
        <ResourceDictionary />
      </Style.Resources>
      <Setter Property="TextElement.FontSize">
        <Setter.Value>
          <s:Double>24</s:Double>
        </Setter.Value>
      </Setter>
    </Style>
  </StackPanel.Resources>
  <FlowDocumentScrollViewer Height="100">
    <FlowDocument Name="palatinolinotype" Background="#FFDC143C">
      <Paragraph Margin="0,0,0,0">Palatino LinoType</Paragraph>
    </FlowDocument>
  </FlowDocumentScrollViewer>
  <FlowDocumentScrollViewer Height="100">
    <FlowDocument Name="couriernew" Background="#FFFFFFE0">
      <Paragraph Margin="0,0,0,0">Courier New</Paragraph>
    </FlowDocument>
  </FlowDocumentScrollViewer>
  <FlowDocumentScrollViewer Height="100">
    <FlowDocument Name="timesnewroman" Background="#FFDC143C">
      <Paragraph Margin="0,0,0,0">Times New Roman</Paragraph>
    </FlowDocument>
  </FlowDocumentScrollViewer>
  <FlowDocumentScrollViewer Height="100">
    <FlowDocument Name="sanserif" Background="#FFFFFFE0">
      <Paragraph Margin="0,0,0,0">San Serif</Paragraph>
    </FlowDocument>
  </FlowDocumentScrollViewer>
  <FlowDocumentScrollViewer Height="100">
    <FlowDocument Name="arial" Background="#FFDC143C">
      <Paragraph Margin="0,0,0,0">Arial</Paragraph>
    </FlowDocument>
  </FlowDocumentScrollViewer>
</StackPanel>