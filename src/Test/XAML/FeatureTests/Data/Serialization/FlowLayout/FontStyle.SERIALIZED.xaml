<StackPanel Background="#FFFFFFE0" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
  <FlowDocumentScrollViewer>
    <FlowDocument Name="normal" Background="#FFDC143C">
      <Paragraph>fontstyle (normal)</Paragraph>
    </FlowDocument>
  </FlowDocumentScrollViewer>
  <FlowDocumentScrollViewer>
    <FlowDocument Name="oblique" Background="#FFFFFFE0">
      <Paragraph>fontstyle (oblique)</Paragraph>
    </FlowDocument>
  </FlowDocumentScrollViewer>
  <FlowDocumentScrollViewer>
    <FlowDocument Name="italic" Background="#FFDC143C">
      <Paragraph>fontstyle (italic)</Paragraph>
    </FlowDocument>
  </FlowDocumentScrollViewer>
</StackPanel>