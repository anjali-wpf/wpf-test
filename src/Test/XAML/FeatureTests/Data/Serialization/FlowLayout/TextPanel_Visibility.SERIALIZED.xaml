<UniformGrid HorizontalAlignment="Left" VerticalAlignment="Top" Columns="1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
  <Border BorderBrush="#FF000000" HorizontalAlignment="Left" BorderThickness="5,5,5,5" VerticalAlignment="Top">
    <FlowDocumentScrollViewer Visibility="Collapsed" DockPanel.Dock="Top">
      <FlowDocument>
        <Paragraph>Visibility="Collapsed"</Paragraph>
      </FlowDocument>
    </FlowDocumentScrollViewer>
  </Border>
  <Border BorderBrush="#FF000000" BorderThickness="5,5,5,5">
    <FlowDocumentScrollViewer Visibility="Hidden" DockPanel.Dock="Top">
      <FlowDocument Background="#FFF5DEB3">
        <Paragraph>Visibility="Hidden"</Paragraph>
      </FlowDocument>
    </FlowDocumentScrollViewer>
  </Border>
  <Border BorderBrush="#FF000000" BorderThickness="5,5,5,5">
    <FlowDocumentScrollViewer Visibility="Visible" DockPanel.Dock="Top">
      <FlowDocument Background="#FFFFFF00">
        <Paragraph>Visibility="Visible"</Paragraph>
      </FlowDocument>
    </FlowDocumentScrollViewer>
  </Border>
</UniformGrid>