<FlowDocumentScrollViewer Name="textpanel" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
  <FlowDocument>
    <Table Background="#FF4169E1" Name="table">
      <Table.Columns>
        <TableColumn Width="200" Background="#FFFFFFE0" Name="column" />
      </Table.Columns>
      <TableRowGroup Name="header">
        <TableRow Background="#FF87CEEB" Name="header_row">
          <TableCell FontSize="20" Name="header_row_cell">
            <Paragraph>this cell is in the header</Paragraph>
          </TableCell>
        </TableRow>
      </TableRowGroup>
      <TableRowGroup Name="body">
        <TableRow Background="#FF87CEEB" Name="body_row">
          <TableCell FontSize="20" Name="body_row_cell">
            <Paragraph>this cell is in the body</Paragraph>
          </TableCell>
        </TableRow>
      </TableRowGroup>
      <TableRowGroup Name="footer">
        <TableRow Background="#FF87CEEB" Name="footer_row">
          <TableCell FontSize="20" Name="footer_row_cell">
            <Paragraph>this cell is in the footer</Paragraph>
          </TableCell>
        </TableRow>
      </TableRowGroup>
    </Table>
  </FlowDocument>
</FlowDocumentScrollViewer>