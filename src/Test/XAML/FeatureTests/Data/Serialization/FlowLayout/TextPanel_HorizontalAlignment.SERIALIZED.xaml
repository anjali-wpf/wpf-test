<UniformGrid Width="640" HorizontalAlignment="Left" Background="#FFFFFFFF" VerticalAlignment="Top" FirstColumn="0" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
  <FlowDocumentScrollViewer>
    <FlowDocument TextAlignment="Left">
      <Paragraph>TextAlignment="Left"</Paragraph>
    </FlowDocument>
  </FlowDocumentScrollViewer>
  <FlowDocumentScrollViewer>
    <FlowDocument Background="#FFF5DEB3" TextAlignment="Right">
      <Paragraph>TextAlignment="Right"</Paragraph>
    </FlowDocument>
  </FlowDocumentScrollViewer>
  <FlowDocumentScrollViewer>
    <FlowDocument Background="#FFFFFF00" TextAlignment="Center">
      <Paragraph>TextAlignment="Center" this is some centered text</Paragraph>
    </FlowDocument>
  </FlowDocumentScrollViewer>
  <FlowDocumentScrollViewer>
    <FlowDocument Background="#FFADD8E6" TextAlignment="Justify">
      <Paragraph>TextAlignment="Justify" this is some justified text</Paragraph>
    </FlowDocument>
  </FlowDocumentScrollViewer>
  <FlowDocumentScrollViewer>
    <FlowDocument Background="#FFFFC0CB" FlowDirection="LeftToRight" TextAlignment="Left">
      <Paragraph>TextAlignment="Left" FlowDirection=LeftToRight</Paragraph>
    </FlowDocument>
  </FlowDocumentScrollViewer>
  <FlowDocumentScrollViewer>
    <FlowDocument Background="#FF00FF00" FlowDirection="LeftToRight" TextAlignment="Right">
      <Paragraph>TextAlignment="Right" FlowDirection="LeftToRight"</Paragraph>
    </FlowDocument>
  </FlowDocumentScrollViewer>
  <FlowDocumentScrollViewer>
    <FlowDocument Background="#FF90EE90" FlowDirection="RightToLeft" TextAlignment="Left">
      <Paragraph>TextAlignment="Left" FlowDirection="RightToLeft"</Paragraph>
    </FlowDocument>
  </FlowDocumentScrollViewer>
  <FlowDocumentScrollViewer>
    <FlowDocument Background="#FF00FFFF" FlowDirection="RightToLeft" TextAlignment="Right">
      <Paragraph>TextAlignment="Right" FlowDirection="RightToLeft"</Paragraph>
    </FlowDocument>
  </FlowDocumentScrollViewer>
</UniformGrid>