<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <DockPanel>
    <DockPanel.Resources>
      <SolidColorBrush x:Key="BlueBrush">#FF0000FF</SolidColorBrush>
      <SolidColorBrush x:Key="GreenBrush">#FF00FF00</SolidColorBrush>
      <SolidColorBrush x:Key="RedBrush">#FFFF0000</SolidColorBrush>
      <SolidColorBrush x:Key="YellowBrush">#FFFFFF00</SolidColorBrush>
    </DockPanel.Resources>
    <Button Name="b1" Background="{DynamicResource YellowBrush}">hello</Button>
    <Button Height="30" Width="20" Foreground="{DynamicResource YellowBrush}" Name="b2" Background="{DynamicResource RedBrush}">ClickMe</Button>
    <Button Height="40" Width="10" Name="b3" Background="{DynamicResource GreenBrush}">ClickMe</Button>
    <Button Height="20" Width="40" Name="b4" Background="{DynamicResource BlueBrush}">ClickMe</Button>
  </DockPanel>
</Page>