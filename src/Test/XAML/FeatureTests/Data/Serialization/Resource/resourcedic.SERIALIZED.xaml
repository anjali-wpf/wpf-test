<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mtxct="http://XamlTestTypes">
  <DockPanel>
    <DockPanel.Resources>
      <SolidColorBrush x:Key="DaBrush">#00FF0000</SolidColorBrush>
      <Color x:Key="DaColor">#00FF0000</Color>
      <mtxct:ChangeableTest IsChangeTest="1" x:Key="ValueChange" />
    </DockPanel.Resources>
    <DockPanel>
      <Border Height="50" Width="150" Background="{DynamicResource DaBrush}">
        <DockPanel />
      </Border>
      <Button Content="{DynamicResource ValueChange}" />
    </DockPanel>
  </DockPanel>
</Page>