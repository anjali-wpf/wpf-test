<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:s="clr-namespace:System;assembly=mscorlib">
  <DockPanel>
    <DockPanel.Resources>
      <Style TargetType="Button" x:Key="{x:Type Button}">
        <Style.Resources>
          <ResourceDictionary />
        </Style.Resources>
        <Setter Property="Panel.Background">
          <Setter.Value>
            <SolidColorBrush>#FF0000FF</SolidColorBrush>
          </Setter.Value>
        </Setter>
      </Style>
      <Style TargetType="RadioButton" x:Key="{x:Type RadioButton}">
        <Style.Resources>
          <ResourceDictionary />
        </Style.Resources>
        <Setter Property="Panel.Background">
          <Setter.Value>
            <SolidColorBrush>#FFFFFF00</SolidColorBrush>
          </Setter.Value>
        </Setter>
      </Style>
      <Style TargetType="Border" x:Key="{x:Type SolidColorBrush}">
        <Style.Resources>
          <ResourceDictionary />
        </Style.Resources>
        <Setter Property="Panel.Background">
          <Setter.Value>
            <SolidColorBrush>#0000FF00</SolidColorBrush>
          </Setter.Value>
        </Setter>
      </Style>
      <Style TargetType="Rectangle" x:Key="{x:Type Rectangle}">
        <Style.Resources>
          <ResourceDictionary />
        </Style.Resources>
        <Setter Property="Shape.Fill">
          <Setter.Value>
            <SolidColorBrush>#FF0000FF</SolidColorBrush>
          </Setter.Value>
        </Setter>
        <Setter Property="Shape.Stroke">
          <Setter.Value>
            <SolidColorBrush>#FFFF0000</SolidColorBrush>
          </Setter.Value>
        </Setter>
        <Setter Property="Shape.StrokeThickness">
          <Setter.Value>
            <s:Double>8</s:Double>
          </Setter.Value>
        </Setter>
        <Setter Property="FrameworkElement.Width">
          <Setter.Value>
            <s:Double>100</s:Double>
          </Setter.Value>
        </Setter>
        <Setter Property="FrameworkElement.Height">
          <Setter.Value>
            <s:Double>75</s:Double>
          </Setter.Value>
        </Setter>
        <Setter Property="FrameworkElement.Margin">
          <Setter.Value>
            <Thickness>10,10,10,10</Thickness>
          </Setter.Value>
        </Setter>
        <Setter Property="Rectangle.RadiusX">
          <Setter.Value>
            <s:Double>10</s:Double>
          </Setter.Value>
        </Setter>
        <Setter Property="Rectangle.RadiusY">
          <Setter.Value>
            <s:Double>10</s:Double>
          </Setter.Value>
        </Setter>
      </Style>
    </DockPanel.Resources>
    <Button Name="b1" Style="{DynamicResource {x:Type Button}}" />
    <RadioButton Name="b2" Style="{DynamicResource {x:Type RadioButton}}" />
    <Border Name="b3" Style="{DynamicResource {x:Type SolidColorBrush}}" />
    <Rectangle Name="r1" Style="{DynamicResource {x:Type Rectangle}}" />
  </DockPanel>
</Page>