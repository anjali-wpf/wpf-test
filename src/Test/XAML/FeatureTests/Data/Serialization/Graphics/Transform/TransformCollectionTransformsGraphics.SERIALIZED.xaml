<CustomCanvas xmlns="clr-namespace:Microsoft.Test.Serialization.CustomElements;assembly=TestRuntime" xmlns:av="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
  <CustomCanvas.Background>
    <av:LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
      <av:LinearGradientBrush.GradientStops>
        <av:GradientStop Offset="0" Color="#FF008000" />
        <av:GradientStop Offset="1" Color="#FFFFFFFF" />
      </av:LinearGradientBrush.GradientStops>
    </av:LinearGradientBrush>
  </CustomCanvas.Background>
  <av:Decorator Name="TransformDecorator">
    <av:Decorator.RenderTransform>
      <av:TransformGroup>
        <av:TransformGroup.Children>
          <av:TranslateTransform X="10" Y="10" />
          <av:ScaleTransform ScaleX="1.5" ScaleY="0.75" />
          <av:SkewTransform AngleY="0.9" AngleX="1.5" />
          <av:RotateTransform Angle="25" />
          <av:ScaleTransform CenterX="30" ScaleX="1.2" ScaleY="1.3" CenterY="30" />
          <av:RotateTransform CenterX="45" Angle="2" CenterY="45" />
        </av:TransformGroup.Children>
      </av:TransformGroup>
    </av:Decorator.RenderTransform>
    <av:Rectangle Height="100" Width="100" Name="Rectangle" Stroke="#FF0000FF" StrokeThickness="2" av:Canvas.Left="125" av:Canvas.Top="100">
      <av:Rectangle.Fill>
        <av:LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
          <av:LinearGradientBrush.GradientStops>
            <av:GradientStop Offset="0" Color="#FFFF0000" />
            <av:GradientStop Offset="1" Color="#FF0000FF" />
          </av:LinearGradientBrush.GradientStops>
        </av:LinearGradientBrush>
      </av:Rectangle.Fill>
    </av:Rectangle>
  </av:Decorator>
</CustomCanvas>