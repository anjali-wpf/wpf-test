<Window
    xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns       = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:col   = "clr-namespace:System.Collections;assembly=mscorlib"
    xmlns:sys   = "clr-namespace:System;assembly=mscorlib"
    x:Class     = "Microsoft.Test.Xaml.Localization.GenericLocBamlTest">

    <Window.Resources>

        <ResourceDictionary>

            <Button  x:Uid="Button_1"   x:Key="button1">LLLbutton1</Button>
            <Button  x:Uid="Button_2"   x:Key="button2" Content="LLLbutton2" />
            <TextBox x:Uid="TextBox_1"  x:Key="textbox1">LLLtextbox1</TextBox>
            <TextBox x:Uid="TextBox_2"  x:Key="textbox2" Text="LLLtextbox2" />

            <CheckBox x:Uid="CheckBox_1" x:Key="checkbox1">LLLCheckBox1</CheckBox>

            <ComboBox x:Uid="ComboBox_1" x:Key="combobox1" Text="LLLMyComboBox">
                <ComboBoxItem x:Uid="ComboBoxItem_1"><TextBlock x:Uid="TextBlock_1" Text="LLL1" /></ComboBoxItem>
                <ComboBoxItem x:Uid="ComboBoxItem_2" Content="LLLItem2" />
            </ComboBox>

            <HeaderedContentControl x:Uid="HeaderedContentControl_1"  x:Key="headeredcc1" Header="LLLHCCHeader" HeaderStringFormat="LLLhcc" Content="LLLHCCContent" />       

            <Label x:Uid="Label_1" x:Key="label1" Content="LLLlabelcontent1" />

            <ListBox x:Uid="ListBox_1" x:Key="listbox1" DisplayMemberPath="LLLlbpath">
                <ListBoxItem x:Uid="ListBoxItem_1"><TextBlock x:Uid="TextBlock_2" Text="LLLItem3" /></ListBoxItem>
             </ListBox>

            <Menu x:Uid="Menu_1" x:Key="menu1" ItemStringFormat="LLLmformat" DisplayMemberPath="LLLmpath">
                <MenuItem x:Uid="MenuItem_1" Header="LLL_File">
                    <MenuItem x:Uid="MenuItem_2" Header="LLL_New" InputGestureText="LLLCtrl+N" />
                    <MenuItem x:Uid="MenuItem_3" Header="LLL_Open" InputGestureText="LLLCtrl+O" />
                </MenuItem>
            </Menu>

            <RepeatButton x:Uid="RepeatButton_1" x:Key="repeatbutton1">LLLRepeatButton1</RepeatButton>

            <TextBlock x:Key="textblock1">
                <RichTextBox x:Uid="RichTextBox_1">
                    <FlowDocument>
                        <Paragraph>
                            <Run x:Uid="Run_1" Text="LLLruntext" />
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </TextBlock> 

            <TextBlock x:Uid="TextBlock_4" x:Key="textblock2" Text="LLLMyTextBlock" />

            <TextBox x:Uid="TextBox_4" x:Key="textbox4" Text="LLLMyTextBox1" SelectedText="LLLMy" />

            <ToggleButton
                x:Uid="ToggleButton_1"
                x:Key="togglebutton1"
                ToolTip="LLLToggleButtonToolTip"
                Content="LLLToggleButtonContent"
                />

            <TreeView x:Uid="TreeView_1" x:Key="treeview1">
                <TreeViewItem x:Uid="TreeViewItem_1" Header="LLLTreeViewItemHeader">LLLTreeViewItem1</TreeViewItem>
            </TreeView>

            <Button x:Uid="Button_4" x:Key="button4">
                <Button.ToolTip>
                    <ToolTip x:Uid="ToolTip_1" Content="LLLtooltipcontent" />
                </Button.ToolTip>
            </Button>

        </ResourceDictionary>

    </Window.Resources>

</Window>
