<Window x:Uid="Window_1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xml:lang="en-US"
    Title="ResourceEditor"
    Height="500"
    Width="500"
    >
    <Grid x:Uid="Grid_1" DockPanel.Dock="Top">
    <Grid.ColumnDefinitions>
    <ColumnDefinition x:Uid="ColumnDefinition_1" Width="1*" />
    <ColumnDefinition x:Uid="ColumnDefinition_2" Width="9*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
    <RowDefinition x:Uid="RowDefinition_1" Localization.Comments="Blah" Height="0.5*" />
    <RowDefinition x:Uid="RowDefinition_2" Localization.Attributes="Blah" Height="3*" />
    <RowDefinition x:Uid="RowDefinition_3" Height="3*" />
    <RowDefinition x:Uid="RowDefinition_4" Height="3*" />
    <RowDefinition x:Uid="RowDefinition_5" Height="0.5*" />
    </Grid.RowDefinitions>
    <TextBlock x:Uid="TextBlock_1" Grid.Column="0" Grid.Row="1">Key:</TextBlock>
    <TextBox x:Uid="TextBox_1" Grid.Column="1" Grid.Row="1" SpellCheck.IsEnabled="true" Name="editkey">Avalon</TextBox>
    <TextBlock x:Uid="TextBlock_2" Grid.Column="0" Grid.Row="2">Value:</TextBlock>
    <TextBox x:Uid="TextBox_2" Grid.Column="1" Grid.Row="2" SpellCheck.IsEnabled="true" Name="editvalue">Globalization</TextBox>
    <StackPanel x:Uid="StackPanel_1" Orientation="Horizontal" Grid.Column="1" Grid.Row="3">
        <Button x:Uid="Button_1" Margin="5">Save</Button>
        <Button x:Uid="Button_2" Margin="5">Cancel</Button>
    </StackPanel>
    <StackPanel x:Uid="StackPanel_2" Orientation="Horizontal" Grid.Column="2" Grid.Row="1">
        <Button x:Uid="Button_3" Margin="2">#Sa#ve2</Button>
        <Button x:Uid="Button_4" Margin="2">_Can_ce_l2</Button>
    </StackPanel>
    <TextBox x:Uid="TextBox_3" Grid.Column="2" Grid.Row="5">Break</TextBox>

     	<Grid x:Uid="Grid_2" DockPanel.Dock="Top">
		<Button x:Uid="Button_5" Margin="2">Save3</Button>
        	<Button x:Uid="Button_6" Margin="2">Cancel3</Button>	
   	</Grid>
    </Grid>
    
    
</Window>
