  <!-- Test for Regression Issue : Pinned datatip scrolled into the toolbar area still catches mouse events
       
       HitTestControl: The name of the control of interest to be hit-tested
       HitTestPoints:  The set of test points to be used for hit-testing, seperated by a '|' character
       HitTestExpectedResults: The set of expected hit-testing results at each of the test points, seperated by a '|' character -->
  <TEST Name="HitTesting" Priority="0" Description="Hit-Testing Scroll Acceleration on a simple Rectangle.">
    <DriverParameters TestType="HitTest" XamlFilePath="HitTesting.xaml" TestAction="ScrollDownRight" ScrollAmount="30" HitTestControl="PART_Rectangle" HitTestPoints="60,60|120,120" HitTestExpectedResults="True|False" />
    <SupportFiles>
