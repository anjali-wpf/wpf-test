<Canvas Background="#FFFFFFFF" Name="PART_ParentCanvas" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:self="clr-namespace:Microsoft.Test.TS;assembly=TSScrollAcceleration">
    <self:ScrollAcceleratedCanvas Name="PART_ScrollAcceleratedCanvas" Canvas.Left="0" Canvas.Top="0" ScrollableArea="0,0,300,300">
        <Rectangle Fill="#FFFF0000" Width="40" Height="40">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <TransformGroup.Children>
                        <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                        <TranslateTransform X="50" Y="50" />
                    </TransformGroup.Children>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
    </self:ScrollAcceleratedCanvas>
</Canvas>