<Border MinWidth="300" MinHeight="300" Padding="10"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="clr-namespace:Microsoft.Test.DataServices;assembly=DataServicesTestPart2">
    <Border.Resources>
        <d:MultiBindConverter x:Key="converter" />
        <!-- ErrorTemplate for textbox -->
        <ControlTemplate x:Key="TextBoxErrorTemplate">
            <DockPanel>
                <TextBlock Text="!" Foreground="DarkOrange" FontSize="18" FontWeight="Bold" Margin="4,0" VerticalAlignment="Center"/>
                <!--  This placeholder occupies where the TextBox will appear. -->
                <AdornedElementPlaceholder />
            </DockPanel>
        </ControlTemplate>
        <!-- Input Text box style-->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="RoyalBlue" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="10,10,10,5" />
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource TextBoxErrorTemplate}" />
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="Foreground" Value="Red" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Error Listbox style -->
        <Style TargetType="ListBox">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="DarkOrange" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
            <Setter Property="Margin" Value="10,5" />
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path=ErrorContent}" TextWrapping="Wrap" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Border.Resources>

    <StackPanel>
        <TextBox Name="textboxA">
            <TextBox.Text>
                <MultiBinding ValidatesOnNotifyDataErrors="true" Converter="{StaticResource converter}">
                    <Binding Path="StringProperty" />
                </MultiBinding>
            </TextBox.Text>
        </TextBox>
        <TextBox Name="textboxB">
            <TextBox.Text>
                <MultiBinding ValidatesOnNotifyDataErrors="False" Converter="{StaticResource converter}">
                    <Binding Path="StringProperty" />
                </MultiBinding>
            </TextBox.Text>
        </TextBox>
    </StackPanel>
</Border>