<DockPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:src="clr-namespace:Microsoft.Test.DataServices"
    xmlns:common="clr-namespace:Microsoft.Test.DataServices;assembly=DataServicesTestCommon"
    Background="cornsilk" 
    >

  <DockPanel.Resources>
    <ObjectDataProvider x:Key="writers" ObjectType="{x:Type common:Writers}" />
    <src:MyConverter x:Key="MyConv" />

    <Style x:Key="listBoxItemStyle">
      <Setter Property="ListBoxItem.Background" Value="Tan"></Setter>
      <Setter Property="ListBoxItem.Template">
        
          <ControlTemplate>
            <TextBox Background="{TemplateBinding Background}">
              <TextBox.Text>
                <MultiBinding Converter="{StaticResource MyConv}" FallbackValue="fallback">
                  <Binding Path="FirstName" />
                  <Binding Path="LastName" />
                </MultiBinding>
              </TextBox.Text>
            </TextBox>
          </ControlTemplate>
        
      </Setter>
      <Style.Triggers>
        <DataTrigger Value="Carl Sagan">
          <DataTrigger.Binding>
            <MultiBinding Converter="{StaticResource MyConv}" FallbackValue="fallback">
              <Binding Path="FirstName" />
              <Binding Path="LastName" />
            </MultiBinding>
          </DataTrigger.Binding>
          <Setter Property="ListBoxItem.Background" Value="Brown" />
        </DataTrigger>
      </Style.Triggers>
    </Style>

    <Style x:Key="listBoxItemStyleMulti">
      <Setter Property="ListBoxItem.Background" Value="Tan"></Setter>
      <Setter Property="ListBoxItem.Template">
        
          <ControlTemplate>
            <TextBox Background="{TemplateBinding Background}">
              <TextBox.Text>
                <MultiBinding Converter="{StaticResource MyConv}" FallbackValue="fallback">
                  <Binding Path="FirstName" />
                  <Binding Path="LastName" />
                </MultiBinding>
              </TextBox.Text>
            </TextBox>
          </ControlTemplate>
        
      </Setter>
      <Style.Triggers>
        <MultiDataTrigger>
          <MultiDataTrigger.Conditions>
            <Condition Value="Carl Sagan">
              <Condition.Binding>
                <MultiBinding Converter="{StaticResource MyConv}" FallbackValue="fallback">
                  <Binding Path="FirstName" />
                  <Binding Path="LastName" />
                </MultiBinding>
              </Condition.Binding>
            </Condition>
          </MultiDataTrigger.Conditions>         
          <MultiDataTrigger.Setters>
            <Setter Property="ListBoxItem.Background" Value="Brown" />
          </MultiDataTrigger.Setters>
        </MultiDataTrigger>
      </Style.Triggers>
    </Style>

    <Style x:Key="listBoxItemStylewithPB">
      <Setter Property="ListBoxItem.Background" Value="Tan"></Setter>
      <Setter Property="ListBoxItem.Template">
        
          <ControlTemplate>
            <TextBox Background="{TemplateBinding Background}">
              <TextBox.Text>
                <MultiBinding Converter="{StaticResource MyConv}">
                  <Binding Path="FirstName" />
                  <Binding Path="LastName" />
                </MultiBinding>
              </TextBox.Text>
            </TextBox>
          </ControlTemplate>
        
      </Setter>
      <Style.Triggers>
        <DataTrigger Value="Carl">
          <DataTrigger.Binding>
            <PriorityBinding>
              <Binding Path="MiddleName" />
              <Binding Path="FirstName" />
            </PriorityBinding>
          </DataTrigger.Binding>
          <Setter Property="ListBoxItem.Background" Value="Brown" />
        </DataTrigger>
      </Style.Triggers>      
    </Style>

    <Style x:Key="listBoxItemStylewithPBwithmultidatatrigger">
      <Setter Property="ListBoxItem.Background" Value="Tan"></Setter>
      <Setter Property="ListBoxItem.Template">
        
          <ControlTemplate>
            <TextBox Background="{TemplateBinding Background}">
              <TextBox.Text>
                <MultiBinding Converter="{StaticResource MyConv}">
                  <Binding Path="FirstName" />
                  <Binding Path="LastName" />
                </MultiBinding>
              </TextBox.Text>
            </TextBox>
          </ControlTemplate>
        
      </Setter>
      <Style.Triggers>
        <MultiDataTrigger>
          <MultiDataTrigger.Conditions>
            <Condition Value="Carl">
              <Condition.Binding>
                <PriorityBinding>
                  <Binding Path="MiddleName" />
                  <Binding Path="FirstName" />
                </PriorityBinding>
              </Condition.Binding>
            </Condition>
          </MultiDataTrigger.Conditions>
          <MultiDataTrigger.Setters>
            <Setter Property="ListBoxItem.Background" Value="Brown" />
          </MultiDataTrigger.Setters>
        </MultiDataTrigger>
      </Style.Triggers>
    </Style>
    
  </DockPanel.Resources>

  <StackPanel>
    <ListBox ItemsSource="{Binding Source={StaticResource writers}}" Name="lb" />
  </StackPanel>
</DockPanel>
