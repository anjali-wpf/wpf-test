<UniformGrid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ListBox x:Name="listBox" ItemsSource="{Binding Path=Orders}">
      <ListBox.ItemTemplate>
        <DataTemplate>
            <DockPanel>
                <TextBlock Width="100" Text="{Binding Path=OrderID}"/>
                <TextBlock Width="100" Text="{Binding Path=CompanyName}"/>
                <TextBlock Width="100" Text="{Binding Path=OrderQuantity}"/>
            </DockPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

</UniformGrid>
