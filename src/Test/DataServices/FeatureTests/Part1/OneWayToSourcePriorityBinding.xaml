<UniformGrid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:common="clr-namespace:Microsoft.Test.DataServices;assembly=DataServicesTestCommon"
             xmlns:local="clr-namespace:Microsoft.Test.DataServices">
  <UniformGrid.Resources>    
  </UniformGrid.Resources>

  <StackPanel Name="myStackPanel">
    <TextBox Name="myTextBox"></TextBox>
    <Label Name="myLabel" Content="This is a test">
      <Label.FontSize>
        <PriorityBinding>
          <Binding ElementName="myTextBox" Path="Text" Mode="OneWayToSource"></Binding>
        </PriorityBinding>
      </Label.FontSize>
    </Label>
  </StackPanel>
</UniformGrid>