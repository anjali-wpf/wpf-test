<Page
    xmlns       = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Page.Resources>
        <Storyboard x:Key="StoryKey">
            <Int32Animation
                Storyboard.TargetProperty   = "(Grid.RowSpan)"
                Storyboard.TargetName       = "rectangle1"
                From                        = "1"
                To                          = "0"
                BeginTime                   = "00:00:00"
                Duration                    = "00:00:01"
                />
        </Storyboard>
    </Page.Resources>  
    
    <Grid ShowGridLines="true" Height="300" Width="300" Background="Black">

        <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
        <RowDefinition />
        <RowDefinition />
        <RowDefinition />
        <RowDefinition />
        <RowDefinition />
        </Grid.RowDefinitions>

        <Rectangle Name="rectangle1" Fill="MediumSpringGreen" />

    </Grid>

</Page>