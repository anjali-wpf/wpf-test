<Page
    xmlns       = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml">

    <Page.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <EventTrigger.Actions>
                <BeginStoryboard>
                    <Storyboard TargetName="animatedCanvas0" TargetProperty="(Canvas.Width)">
                        <DoubleAnimation From="100" To="110"  BeginTime="0:0:0" IsCumulative="true"  Duration="0:0:0.5" RepeatBehavior="5x" FillBehavior="HoldEnd"/>
                    </Storyboard>
                </BeginStoryboard>
                <BeginStoryboard>
                    <Storyboard TargetName="animatedCanvas1" TargetProperty="(Canvas.Width)">
                        <DoubleAnimation From="100" By="10"  BeginTime="0:0:0" IsCumulative="true"  Duration="0:0:0.5" RepeatBehavior="5x" FillBehavior="HoldEnd"/>
                    </Storyboard>
                </BeginStoryboard>
                <BeginStoryboard>
                    <Storyboard TargetName="animatedCanvas2" TargetProperty="(Canvas.Width)">
                        <DoubleAnimation From="100"  BeginTime="0:0:0" IsCumulative="true"  Duration="0:0:0.5" RepeatBehavior="5x" FillBehavior="HoldEnd"/>
                    </Storyboard>
                </BeginStoryboard>
                <BeginStoryboard>
                    <Storyboard TargetName="animatedCanvas3" TargetProperty="(Canvas.Width)">
                        <DoubleAnimation To="110"  BeginTime="0:0:0" IsCumulative="true"  Duration="0:0:0.5" RepeatBehavior="5x" FillBehavior="HoldEnd"/>
                    </Storyboard>
                </BeginStoryboard>
                <BeginStoryboard>
                    <Storyboard TargetName="animatedCanvas4" TargetProperty="(Canvas.Width)">
                        <DoubleAnimation By="10"  BeginTime="0:0:0" IsCumulative="true"  Duration="0:0:0.5" RepeatBehavior="5x" FillBehavior="HoldEnd"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger.Actions>
        </EventTrigger>
    </Page.Triggers>

  <Canvas Background="Ivory">
    <StackPanel>
      <Canvas Name="animatedCanvas0" Width="100" Height="50" HorizontalAlignment="Left" Margin="2">
        <Canvas.Background>
          <SolidColorBrush Color="DodgerBlue" Opacity="0.5" />
        </Canvas.Background>
      </Canvas>
      <Canvas Name="animatedCanvas1" Width="100" Height="50" HorizontalAlignment="Left" Margin="2">
        <Canvas.Background>
          <SolidColorBrush Color="DodgerBlue" Opacity="0.5" />
        </Canvas.Background>
      </Canvas>
      <Canvas Name="animatedCanvas2" Width="110" Height="50" HorizontalAlignment="Left" Margin="2">
        <Canvas.Background>
          <SolidColorBrush Color="DodgerBlue" Opacity="0.5" />
        </Canvas.Background>
      </Canvas>
      <Canvas Name="animatedCanvas3" Width="100" Height="50" HorizontalAlignment="Left" Margin="2">
        <Canvas.Background>
          <SolidColorBrush Color="DodgerBlue" Opacity="0.5" />
        </Canvas.Background>
      </Canvas>
      <Canvas Name="animatedCanvas4" Width="100" Height="50" HorizontalAlignment="Left" Margin="2">
        <Canvas.Background>
          <SolidColorBrush Color="DodgerBlue" Opacity="0.5" />
        </Canvas.Background>
      </Canvas>
    </StackPanel>
        
    <Line X1="100" Y1="0" X2="100" Y2="300" Stroke="Red"   StrokeThickness="1" />
    <Line X1="110" Y1="0" X2="110" Y2="300" Stroke="Green" StrokeThickness="1" />
    <Line X1="120" Y1="0" X2="120" Y2="300" Stroke="Blue"  StrokeThickness="1" />
    <Line X1="130" Y1="0" X2="130" Y2="300" Stroke="Red"   StrokeThickness="1" />
    <Line X1="140" Y1="0" X2="140" Y2="300" Stroke="Green" StrokeThickness="1" />
    <Line X1="150" Y1="0" X2="150" Y2="300" Stroke="Blue"  StrokeThickness="1" />
    <Line X1="160" Y1="0" X2="160" Y2="300" Stroke="Red"   StrokeThickness="1" />
    <Line X1="170" Y1="0" X2="170" Y2="300" Stroke="Green" StrokeThickness="1" />
    <Line X1="180" Y1="0" X2="180" Y2="300" Stroke="Blue"  StrokeThickness="1" />
    <Line X1="190" Y1="0" X2="190" Y2="300" Stroke="Red"   StrokeThickness="1" />
    <Line X1="200" Y1="0" X2="200" Y2="300" Stroke="Green" StrokeThickness="1" />
    <Line X1="210" Y1="0" X2="210" Y2="300" Stroke="Blue"  StrokeThickness="1" />
    <Line X1="220" Y1="0" X2="220" Y2="300" Stroke="Red"   StrokeThickness="1" />
    <Line X1="230" Y1="0" X2="230" Y2="300" Stroke="Green" StrokeThickness="1" />

  </Canvas>
  
</Page>
