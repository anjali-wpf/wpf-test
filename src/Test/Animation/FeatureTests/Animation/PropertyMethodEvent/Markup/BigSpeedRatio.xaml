<Canvas
    Background  = "white"
    Name        = "canvas"
    xmlns       = "http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Canvas.Resources>
        <Storyboard x:Key="StoryKey" >
            <DoubleAnimation
                SpeedRatio                  = "99999999999999999999"
                Storyboard.TargetProperty   = "(Rectangle.Width)"
                Storyboard.TargetName       = "r1"
                From                        = "1"
                To                          = "1000"
                BeginTime                   = "0:0:0"
                Duration                    = "0:0:2"
                AutoReverse                 = "True"
                RepeatBehavior              = "Forever"
                />
        </Storyboard>
    </Canvas.Resources>
    
    <Rectangle Name="r1" Canvas.Left="600" Width="200" Height="200" Stroke="Black" StrokeThickness="15" Fill="Red"></Rectangle>

</Canvas>