<Canvas
    Background  = "White"
    Name        = "canvas" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml">

    <Canvas>

        <Canvas.Triggers>
            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <EventTrigger.Actions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty   = "(Rectangle.Width)"
                                SpeedRatio                  = "4.94e-323"
                                Storyboard.TargetName       = "m1"
                                From                        = "10"
                                To                          = "200"
                                BeginTime                   = "0:0:0"
                                Duration                    = "0:0:5"
                                AutoReverse                 = "True"
                                RepeatBehavior              = "Forever"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger.Actions>
            </EventTrigger>
        </Canvas.Triggers>

    <Rectangle Name="m1" Width="200" Height="200"  Canvas.Top="0" Fill="#33ff0000" />

    </Canvas>

</Canvas>