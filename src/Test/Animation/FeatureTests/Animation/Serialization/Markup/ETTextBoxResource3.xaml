
<tst:CustomCanvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:tst="clr-namespace:Microsoft.Test.Serialization.CustomElements;assembly=TestRuntime"
                  Verifier="AnimationTest.exe#Microsoft.Test.Animation.SerializeAnimationTest.VerifyContent"
                  Background="Black" >

    <Canvas.Resources>
        <Storyboard x:Key="AnimOpacity">
            <DoubleAnimation
                Storyboard.TargetProperty="(TextBox.Background).(SolidColorBrush.Opacity)"
                Storyboard.TargetName="Animate"
                To="1"
                BeginTime="0:1:3"
                Duration="0:0:2"
                  />
        </Storyboard>
    </Canvas.Resources>
    
    <Canvas.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <EventTrigger.Actions>
                <BeginStoryboard Storyboard="{DynamicResource AnimOpacity}" />
            </EventTrigger.Actions>
        </EventTrigger>
    </Canvas.Triggers>
 
    <Canvas Background="Navy">
        <TextBox Name="Animate" Height="100" Width="100" Canvas.Top="0" Text="Avalon!">
            <TextBox.Background>
                <SolidColorBrush Color="MediumPurple" Opacity="0" />
            </TextBox.Background>
        </TextBox>
    </Canvas>
    
</tst:CustomCanvas>
