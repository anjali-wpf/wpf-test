
<tst:CustomCanvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:tst="clr-namespace:Microsoft.Test.Serialization.CustomElements;assembly=TestRuntime"
                  Verifier="AnimationTest.exe#Microsoft.Test.Animation.SerializeAnimationTest.VerifyContent"
                  Background="Brown" >
    <Canvas.Triggers>
        <EventTrigger RoutedEvent="Mouse.MouseUp">
            <EventTrigger.Actions>
                <BeginStoryboard>
                    <BeginStoryboard.Storyboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="(Ellipse.RenderTransform).(RotateTransform.CenterY)"
                                Storyboard.TargetName="Animate"
                                BeginTime="0:1:0"
                                Duration="0:0:5"
                                From="60"
                                To="150"
                                >
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard.Storyboard>
                </BeginStoryboard>
            </EventTrigger.Actions>
        </EventTrigger>
    </Canvas.Triggers>

    <Ellipse Name="Animate" Canvas.Left="10" Canvas.Top="10" Width="100" Height="200" Fill="Orange" Stroke="Black">
          <Ellipse.RenderTransform>
               <RotateTransform CenterX="60" CenterY="60" Angle="120" />
          </Ellipse.RenderTransform>     
     </Ellipse>
     
</tst:CustomCanvas>
