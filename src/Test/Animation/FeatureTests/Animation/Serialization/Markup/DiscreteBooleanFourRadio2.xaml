
<tst:CustomCanvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:tst="clr-namespace:Microsoft.Test.Serialization.CustomElements;assembly=TestRuntime"
                  Verifier="AnimationTest.exe#Microsoft.Test.Animation.SerializeAnimationTest.VerifyContent"
                  Background="MediumTurquoise" >

    <RadioButton
        Name="Animate"
        FontSize="36"
        Canvas.Left="200"
        Canvas.Top="200"
        Height="50"
        Width="50"
        Content="Avalon!">
        <RadioButton.Triggers>
            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <EventTrigger.Actions>
                    <BeginStoryboard>
                        <BeginStoryboard.Storyboard>
                            <Storyboard>
                                <BooleanAnimationUsingKeyFrames
                                    Storyboard.TargetProperty="(RadioButton.Focusable)"
                                    BeginTime="0:1:2"
                                    Duration="0:0:5"
                                    RepeatBehavior="1x"
                                    >
                                    <BooleanAnimationUsingKeyFrames.KeyFrames>
                                        <BooleanKeyFrameCollection>
                                            <DiscreteBooleanKeyFrame Value="True" KeyTime="0" />
                                            <DiscreteBooleanKeyFrame Value="False" KeyTime="25%" />
                                            <DiscreteBooleanKeyFrame Value="True" KeyTime="50%" />
                                            <DiscreteBooleanKeyFrame Value="False" KeyTime="75%" />
                                            <DiscreteBooleanKeyFrame Value="True" KeyTime="100%" />
                                        </BooleanKeyFrameCollection>
                                    </BooleanAnimationUsingKeyFrames.KeyFrames>
                                </BooleanAnimationUsingKeyFrames>

                                <BooleanAnimationUsingKeyFrames
                                    Storyboard.TargetProperty="(RadioButton.Focusable)"
                                    BeginTime="0:0:7"
                                    Duration="0:0:5"
                                    >
                                    <BooleanAnimationUsingKeyFrames.KeyFrames>
                                        <BooleanKeyFrameCollection>
                                            <DiscreteBooleanKeyFrame Value="True" KeyTime="0" />
                                            <DiscreteBooleanKeyFrame Value="False" KeyTime="25%" />
                                            <DiscreteBooleanKeyFrame Value="True" KeyTime="50%" />
                                            <DiscreteBooleanKeyFrame Value="False" KeyTime="75%" />
                                            <DiscreteBooleanKeyFrame Value="True" KeyTime="100%" />
                                        </BooleanKeyFrameCollection>
                                    </BooleanAnimationUsingKeyFrames.KeyFrames>
                                </BooleanAnimationUsingKeyFrames>

                                <BooleanAnimationUsingKeyFrames
                                    Storyboard.TargetProperty="(RadioButton.Focusable)"
                                    BeginTime="0:0:12"
                                    Duration="0:0:5"
                                    >
                                    <BooleanAnimationUsingKeyFrames.KeyFrames>
                                        <BooleanKeyFrameCollection>
                                            <DiscreteBooleanKeyFrame Value="True" KeyTime="0" />
                                            <DiscreteBooleanKeyFrame Value="False" KeyTime="25%" />
                                            <DiscreteBooleanKeyFrame Value="True" KeyTime="50%" />
                                            <DiscreteBooleanKeyFrame Value="False" KeyTime="75%" />
                                            <DiscreteBooleanKeyFrame Value="True" KeyTime="100%" />
                                        </BooleanKeyFrameCollection>
                                    </BooleanAnimationUsingKeyFrames.KeyFrames>
                                </BooleanAnimationUsingKeyFrames>

                                <BooleanAnimationUsingKeyFrames
                                    Storyboard.TargetProperty="(RadioButton.Focusable)"
                                    BeginTime="0:0:17"
                                    Duration="0:0:5"
                                    >
                                    <BooleanAnimationUsingKeyFrames.KeyFrames>
                                        <BooleanKeyFrameCollection>
                                            <DiscreteBooleanKeyFrame Value="True" KeyTime="0" />
                                            <DiscreteBooleanKeyFrame Value="False" KeyTime="25%" />
                                            <DiscreteBooleanKeyFrame Value="True" KeyTime="50%" />
                                            <DiscreteBooleanKeyFrame Value="False" KeyTime="75%" />
                                            <DiscreteBooleanKeyFrame Value="True" KeyTime="100%" />
                                        </BooleanKeyFrameCollection>
                                    </BooleanAnimationUsingKeyFrames.KeyFrames>
                                </BooleanAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard.Storyboard>
                    </BeginStoryboard>
                </EventTrigger.Actions>
            </EventTrigger>
        </RadioButton.Triggers>
    </RadioButton>
     
</tst:CustomCanvas>
