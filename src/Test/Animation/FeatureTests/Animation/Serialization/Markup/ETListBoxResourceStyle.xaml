
<tst:CustomCanvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:tst="clr-namespace:Microsoft.Test.Serialization.CustomElements;assembly=TestRuntime"
                  Verifier="AnimationTest.exe#Microsoft.Test.Animation.SerializeAnimationTest.VerifyContent"
                  Background="Black" >
    
    <Canvas Background="Navy">
        <Canvas.Resources>
            <Style x:Key="AnimStyle" TargetType="{x:Type ListBox}">
                <Style.Resources>
                    <Storyboard x:Key="StoryboardKey">
                        <DoubleAnimation
                            Storyboard.TargetProperty="Opacity"
                            To="1"
                            BeginTime="0:1:3"
                            Duration="0:0:2" />
                    </Storyboard>
                </Style.Resources>
                <Style.Triggers>
                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                        <EventTrigger.Actions>
                            <BeginStoryboard Storyboard="{StaticResource StoryboardKey}" />
                        </EventTrigger.Actions>
                    </EventTrigger>
                </Style.Triggers>
            </Style>
        </Canvas.Resources>
        
        <ListBox Name="Animate" Width="100" Height="100" Opacity="0" Background="MediumPurple" Style="{StaticResource AnimStyle}" />
        
    </Canvas>
    
</tst:CustomCanvas>
