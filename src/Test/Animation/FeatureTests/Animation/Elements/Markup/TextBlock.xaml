<Page
    Name    = "Root"
    xmlns   = "http://schemas.microsoft.com/winfx/2006/xaml/presentation">

    <Border
        Height          = "150"
        Width           = "150"
        BorderBrush     = "Navy"
        BorderThickness = "4,4,4,4"
        Background      = "DeepSkyBlue">
        <Canvas
            Height  = "150"
            Width   = "150"
            >
            <TextBlock
                Name            = "Animate"
                Opacity         = "1"
                Height          = "120"
                Width           = "120"
                FontWeight      = "Bold"
                FontFamily      = "Comic Sans MS"
                FontSize        = "64"
                Foreground      = "DarkOrchid"
                Canvas.Left     = "50"
                Canvas.Top      = "50"
                Margin          = "0"
            >Z
            </TextBlock>
        </Canvas>
    </Border>

</Page>       
