<Page
    xmlns       = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml"
    Background  = "LightSeaGreen">
    
    <Canvas Width="1024" Height="600">
    
        <Ellipse Width="100" Height="30" Fill="DarkBlue" Name="WEllipse" Canvas.Left="300" Canvas.Top="100">
            <Ellipse.RenderTransform>
                <TranslateTransform X="0" />
            </Ellipse.RenderTransform> 
        </Ellipse>

        <Ellipse Width="30" Height="100" Fill="DarkGreen" Name="HEllipse" Canvas.Left="300" Canvas.Top="300">
            <Ellipse.RenderTransform>
                <TranslateTransform X="0" />
            </Ellipse.RenderTransform>
        </Ellipse>

    </Canvas>
    
</Page>
