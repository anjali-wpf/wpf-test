<Page
    xmlns       = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml"
    Background  = "LemonChiffon">

    <Page.Resources>
        <Storyboard x:Key="story1">
            <DoubleAnimation
                Storyboard.TargetProperty   = "(Button.Width)"
                Storyboard.TargetName       = "button1"
                BeginTime                   = "0:0:0.1"
                Duration                    = "0:0:1"
                From                        = "100"
                To                          = "150"
                >
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="story2">
            <DoubleAnimation
                Storyboard.TargetProperty   = "(Button.Width)"
                Storyboard.TargetName       = "button1"
                BeginTime                   = "0:0:0.1"
                Duration                    = "0:0:1"
                From                        = "150"
                To                          = "100"
                >
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>

    <Canvas>
        <TextBox Name="textbox1" Background="BurlyWood" Canvas.Left="20" Canvas.Top="20" Height="50" Width="100" />
        <Button Name="button1" Canvas.Left="20" Canvas.Top="100" Height="100" Width="100" Background="LightGreen" />
    </Canvas>
</Page>
