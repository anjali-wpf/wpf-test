<Border
    Name        = "Root"
    Tag         = "Color Moccasin Background"
    xmlns       = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml"
    Background  = "SandyBrown">

    <Canvas>

        <Canvas.Resources>
            <Style
                xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml"
                x:Key       = "{x:Type ComboBox}"
                TargetType  = "{x:Type ComboBox}">
                <Style.Triggers>
                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <BeginStoryboard.Storyboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetProperty   = "(ComboBox.Background).(SolidColorBrush.Color)"
                                            To                          = "Moccasin"
                                            BeginTime                   = "0:0:2"
                                            Duration                    = "0:0:4"
                                            FillBehavior                = "HoldEnd"
                                          />
                                    </Storyboard>  
                                </BeginStoryboard.Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </Style.Triggers>
            </Style>
        </Canvas.Resources>
         
         <TextBox Height="1" Width="2" Background="Orange" /> <!-- Prevents focus on ComboBox -->
         
         <ComboBox Name="AnimatedFE" Background="Navy" Height="125" Width="125">
              <ComboBoxItem>Item1</ComboBoxItem>
              <ComboBoxItem>Item2</ComboBoxItem>
         </ComboBox>
         
    </Canvas>
    
</Border>
