<Page
    Name        = "Root"
    Tag         = "Color White Color"
    xmlns       = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml"
    Background  = "LightBlue"
    >
    <InkCanvas Width="700" Height="400" Name="animatedInkCanvas" Strokes="">
         <InkCanvas.Background>
            <LinearGradientBrush>
               <LinearGradientBrush.GradientStops>
                  <GradientStop Color="Blue" Offset="0.0" x:Name="AnimatedAnimatable"/>
                  <GradientStop Color="White" Offset="0.5" />
                  <GradientStop Color="Green" Offset="1.0" />
               </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
         </InkCanvas.Background>
    </InkCanvas>

    <Page.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <EventTrigger.Actions>
                <BeginStoryboard>
                    <BeginStoryboard.Storyboard>
                        <Storyboard>
                            <ColorAnimation
                                Storyboard.TargetProperty   = "Color"
                                Storyboard.TargetName       = "AnimatedAnimatable"
                                From                        = "Blue"
                                To                          = "White"
                                BeginTime                   = "00:00:02"
                                Duration                    = "00:00:04"
                                  />
                            <ColorAnimation
                                Storyboard.TargetProperty   = "(InkCanvas.Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)"
                                Storyboard.TargetName       = "animatedInkCanvas"
                                From                        = "White"
                                To                          = "Green"
                                BeginTime                   = "00:00:02"
                                Duration                    = "00:00:04"
                                  />
                            <ColorAnimation
                                Storyboard.TargetProperty   = "(InkCanvas.Background).(LinearGradientBrush.GradientStops)[2].(GradientStop.Color)"
                                Storyboard.TargetName       = "animatedInkCanvas"
                                From                        = "Green"
                                To                          = "Blue"
                                BeginTime                   = "00:00:02"
                                Duration                    = "00:00:04"
                                  />
                        </Storyboard>
                    </BeginStoryboard.Storyboard>
                </BeginStoryboard>
            </EventTrigger.Actions>
        </EventTrigger>
    </Page.Triggers>

</Page>
