<Page
    Name        = "Root"
    Tag         = "Color PaleGreen Fill"
    xmlns       = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml"
    Background  = "SandyBrown">

    <Page.Resources>
        <Style x:Key="BaseStyle" TargetType="{x:Type Path}">
            <Style.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <BeginStoryboard.Storyboard>
                                <Storyboard>
                                    <RectAnimation
                                        Storyboard.TargetProperty   = "(Path.Data).(RectangleGeometry.Rect)"
                                        From                        = "0,0,0,0"
                                        To                          = "0,0,100,100"
                                        BeginTime                   = "0:0:2"
                                        Duration                    = "0:0:1"
                                        FillBehavior                = "HoldEnd" />
                                </Storyboard>  
                            </BeginStoryboard.Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NewStyle" BasedOn="{StaticResource BaseStyle}" TargetType="{x:Type Path}">
            <Style.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <BeginStoryboard.Storyboard>
                                <Storyboard>
                                    <ColorAnimation
                                        Storyboard.TargetProperty   = "(Path.Fill).(SolidColorBrush.Color)"
                                        To                          = "PaleGreen"
                                        BeginTime                   = "0:0:2"
                                        Duration                    = "0:0:4"
                                        FillBehavior                = "HoldEnd"
                                          />
                                </Storyboard>  
                            </BeginStoryboard.Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    
    <Canvas>
        <Path Name="AnimatedFE" Style="{DynamicResource NewStyle}" Fill="Azure">
            <Path.Data>
                <RectangleGeometry Rect="0,0,0,0" />
            </Path.Data>
        </Path>
    </Canvas>
     
</Page>
