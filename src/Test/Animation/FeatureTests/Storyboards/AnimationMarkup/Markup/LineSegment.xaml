<Canvas
    xmlns       = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml"
    Name        = "Root"
    Tag         = "Point -510,100 Point"
    Background  = "Moccasin">

    <Canvas>
    <Path Name="TargetElement" Fill="Purple" Stroke="Purple" StrokeThickness="100">
        <Path.Data>
            <PathGeometry>
                <PathGeometry.Figures>
                    <PathFigure StartPoint="100 100" IsClosed="True">
                        <PathFigure.Segments>
                                <LineSegment Point="150,100" />
                                <LineSegment x:Name="AnimatedAnimatable" Point="200,200" />
                        </PathFigure.Segments>
                    </PathFigure>
                </PathGeometry.Figures>
            </PathGeometry>
        </Path.Data>
        <Path.Triggers>
            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <EventTrigger.Actions>
                    <BeginStoryboard>
                        <BeginStoryboard.Storyboard>
                            <Storyboard>
                                    <PointAnimation
                                        Storyboard.TargetProperty   = "(Path.Data).(PathGeometry.Figures)[0].(PathFigure.Segments)[1].(LineSegment.Point)"
                                        From                        = "200,200"
                                        To                          = "-510,100"
                                        BeginTime                   = "0:0:2"
                                        Duration                    = "0:0:3"
                                        FillBehavior                = "HoldEnd"
                                          />
                            </Storyboard>
                        </BeginStoryboard.Storyboard>
                    </BeginStoryboard>
                </EventTrigger.Actions>
            </EventTrigger>
        </Path.Triggers>
    </Path>
    </Canvas>

</Canvas>
