<Page
    Name        = "Root"
    Tag         = "Double 61 CenterY"
    xmlns       = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml"
    Background  = "Black">

    <Canvas>
        <Border
            Height          = "200"
            Width           = "150"
            BorderBrush     = "Red"
            BorderThickness = "1px"
            Background      = "OliveDrab"
            >     
            <TextBlock
                Name                = "TargetElement"
                Height              = "150"
                Width               = "150"
                FontFamily          = "Tahoma"
                FontSize            = "18"
                Foreground          = "White"
                Background          = "DarkOliveGreen"
                TextAlignment       = "Right"
                >Redmond, WA
                <TextBlock.RenderTransform>
                    <RotateTransform x:Name="AnimatedAnimatable" CenterX="250" CenterY="250" Angle="45" />
                </TextBlock.RenderTransform>
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <BeginStoryboard.Storyboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetProperty   = "(TextBlock.RenderTransform).(RotateTransform.CenterX)"
                                            To                          = "60"
                                            BeginTime                   = "0:0:2"
                                            Duration                    = "0:0:4"
                                              />
                                        <DoubleAnimation
                                            Storyboard.TargetProperty   = "(TextBlock.RenderTransform).(RotateTransform.CenterY)"
                                            To                          = "61"
                                            BeginTime                   = "0:0:2"
                                            Duration                    = "0:0:4"
                                              />
                                    </Storyboard>
                                </BeginStoryboard.Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>
        </Border>
    </Canvas>

</Page>
