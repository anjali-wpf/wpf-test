<!-- Storyboard inside Page Resources: Multiple Resources (Dynamic) -->

<Page
    Name    = "Root"
    Tag     = "Color Blue Background"
    xmlns   = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Page.Resources>
        <!-- This one should be ignored -->
        <Storyboard x:Key="StoryKey">
            <DoubleAnimation
                Storyboard.TargetProperty   = "(Button.Opacity)"
                Storyboard.TargetName       = "AnimatedFE"
                To                          = ".5"
                BeginTime                   = "0:0:2"
                Duration                    = "0:0:4"
                  />
        </Storyboard>
    </Page.Resources>
    
    <Canvas Background="White">
        <Canvas.Resources>
            <Storyboard x:Key="StoryKey">
                <ColorAnimation
                    Storyboard.TargetProperty   = "(Button.Background).(SolidColorBrush.Color)"
                    Storyboard.TargetName       = "AnimatedFE"
                    To                          = "Blue"
                    BeginTime                   = "0:0:2"
                    Duration                    = "0:0:4"
                      />
            </Storyboard>
        </Canvas.Resources>

        <Canvas.Triggers>
            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <EventTrigger.Actions>
                    <BeginStoryboard Storyboard="{DynamicResource StoryKey}" />
                </EventTrigger.Actions>
            </EventTrigger>
        </Canvas.Triggers>
 
        <Button Name='AnimatedFE' Height="100" Width="100" Canvas.Top="0" Background="Navy" Opacity="1" />
    
    </Canvas>
    
</Page>
