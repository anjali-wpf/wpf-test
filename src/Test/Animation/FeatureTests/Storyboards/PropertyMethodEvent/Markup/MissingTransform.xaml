<Page   xmlns   ="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x ="http://schemas.microsoft.com/winfx/2006/xaml">
        
    <Page.Resources>
        <Storyboard x:Key="StoryKey" >
            <DoubleAnimation
                Storyboard.TargetProperty   = "RenderTransform.ScaleX"
                Storyboard.TargetName       = "textbox1"
                To                          = "3"
                Duration                    = "0:0:2"
                />
        </Storyboard>
    </Page.Resources>
    
    <Canvas Background="SlateBlue">
        <TextBox Name="textbox1" Height="50" Width="100" Canvas.Top="200" Canvas.Left="200" />
    </Canvas>
    
</Page>
