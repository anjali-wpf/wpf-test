  <Canvas.Resources>
    <Style TargetType="{x:Type Button}">
      <Setter Property="Height" Value="100" />
      <Setter Property="Width" Value="100" />
    </Style>
  </Canvas.Resources>

  <Button Content="one" Name="one_btn"  Canvas.Top="75" Canvas.Left="75" Panel.ZIndex="1" Background="green"/>
  <Button Content="two" Name="two_btn" Canvas.Top="85" Canvas.Right="65" Panel.ZIndex="2" Background="red"/>
  <Button Content="three" Name="three_btn" Canvas.Top="95" Canvas.Right="60" Panel.ZIndex="3" Background="blue"/>
  <Button Content="four" Name="four_btn" Canvas.Bottom="55" Canvas.Left="65" Panel.ZIndex="4" Background="pink"/>
  <Button Content="five" Name="five_btn" Canvas.Bottom="90" Canvas.Right="100" Panel.ZIndex="5" Background="orange"/>


</Canvas>
