<DockPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="LightGreen" Width="300" Height="300">

  <DockPanel.Resources>
    <Style TargetType="{x:Type Button}">
      <Setter Property="Height" Value="Auto" />
      <Setter Property="Width" Value="Auto" />
    </Style>
  </DockPanel.Resources>

  <Button Content="one" Name="one_btn" DockPanel.Dock="Left" Margin="0,0,-250,0" Panel.ZIndex="1" Background="green"/>
  <Button Content="two" Name="two_btn" DockPanel.Dock="Bottom" Margin="0,-250,0,0" Panel.ZIndex="2" Background="red"/>
  <Button Content="three" Name="three_btn" DockPanel.Dock="Top" Margin="0,0,0,-250" Panel.ZIndex="3" Background="blue"/>
  <Button Content="four" Name="four_btn" DockPanel.Dock="Right" Margin="-250,0,0,0" Panel.ZIndex="4" Background="pink"/>
  <Button Content="five" Name="five_btn" Margin="25" Panel.ZIndex="5" Background="orange"/>


</DockPanel>
