<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="LightYellow" ShowGridLines="True">
    <Grid.ColumnDefinitions>
    <ColumnDefinition Width="Auto" />
    <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
    <RowDefinition Height="Auto" />
    <RowDefinition />
    </Grid.RowDefinitions>
    <!--Element for Testing -->
    <Border Background="Orange">
        <Border Width="100" Height="100" Background="Yellow" Padding="10, 20, 30, 40">
            <Border.LayoutTransform>
                <TransformGroup>
                    <TransformGroup.Children>
                        <TransformCollection>
                            <RotateTransform Angle="90" />
                            <ScaleTransform ScaleX="2" ScaleY="2" />
                        </TransformCollection>
                    </TransformGroup.Children>
                </TransformGroup>
            </Border.LayoutTransform>
            <Border Background="White" />
        </Border>
    </Border>
    <!--For Verification Purpose...-->
    <Rectangle Width="80" Height="80" Fill="Blue" HorizontalAlignment="Left" />
    <Rectangle Width="20" Height="20" Fill="Blue" VerticalAlignment="Top" />
    <Rectangle Width="40" Height="40" Fill="Blue" HorizontalAlignment="right" />
    <Rectangle Width="60" Height="60" Fill="Blue" VerticalAlignment="Bottom" />
</Grid>
