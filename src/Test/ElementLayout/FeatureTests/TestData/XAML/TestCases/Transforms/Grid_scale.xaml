<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="white" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid.ColumnDefinitions>
    <ColumnDefinition Width="Auto" />
    <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Decorator>
        <Decorator.LayoutTransform>
            <ScaleTransform ScaleX="2" ScaleY="2" />
        </Decorator.LayoutTransform>
        <Grid Background="Wheat" Width="100" Height="100">
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="25" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
            </Grid.RowDefinitions>
            <!-- PERCENT_REMOVED. please replace if necessary???  Width="25%"-->
            <!-- PERCENT_REMOVED. please replace if necessary???  Heihgt="25%"-->
            <Border Grid.Column="0" Grid.Row="0" Background="#220000" />
            <Border Grid.Column="1" Grid.Row="0" Background="#440000" />
            <Border Grid.Column="0" Grid.Row="1" Background="#440000" />
            <Border Grid.Column="1" Grid.Row="1" Background="#660000" />
        </Grid>
    </Decorator>
    <Decorator Grid.Column="1">
        <Decorator.LayoutTransform>
            <ScaleTransform ScaleX="-2" ScaleY="-2" />
        </Decorator.LayoutTransform>
        <Grid Background="Wheat" Width="100" Height="100">
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="25" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
            </Grid.RowDefinitions>
            <!-- PERCENT_REMOVED. please replace if necessary???  Width="25%"-->
            <!-- PERCENT_REMOVED. please replace if necessary???  Height="25%"-->
            <Border Grid.Column="0" Grid.Row="0" Background="#001100" />
            <Border Grid.Column="1" Grid.Row="0" Background="#003300" />
            <Border Grid.Column="0" Grid.Row="1" Background="#003300" />
            <Border Grid.Column="1" Grid.Row="1" Background="#005500" />
        </Grid>
    </Decorator>
</Grid>
