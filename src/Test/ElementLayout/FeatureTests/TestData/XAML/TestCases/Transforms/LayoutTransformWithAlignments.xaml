<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="LightYellow" ShowGridLines="True">
    <Grid.ColumnDefinitions>
    <ColumnDefinition Width="300" />
    <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
    <RowDefinition Height="300" />
    <RowDefinition />
    </Grid.RowDefinitions>
    <!--Element for Testing -->
    <Border Background="Orange">
        <Border Width="50" Height="100" Background="Yellow" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Border.LayoutTransform>
                <TransformGroup>
                    <TransformGroup.Children>
                        <TransformCollection>
                            <RotateTransform Angle="90" />
                            <ScaleTransform ScaleX="2" ScaleY="2" />
                        </TransformCollection>
                    </TransformGroup.Children>
                </TransformGroup>
            </Border.LayoutTransform>
        </Border>
    </Border>
    <!--For Verification Purpose...-->
    <Rectangle Width="50" Height="50" Fill="Blue" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
    <Rectangle Width="50" Height="50" Fill="Blue" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
    <Rectangle Width="50" Height="200" Fill="Blue" VerticalAlignment="Top" />
</Grid>
