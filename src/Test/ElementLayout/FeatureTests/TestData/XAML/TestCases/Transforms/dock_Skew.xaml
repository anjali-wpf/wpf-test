<DockPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="white" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Decorator>
        <Decorator.LayoutTransform>
            <TransformGroup>
                <TransformGroup.Children>
                    <TransformCollection>
                        <SkewTransform AngleX="10" />
                        <SkewTransform AngleY="20" />
                    </TransformCollection>
                </TransformGroup.Children>
            </TransformGroup>
        </Decorator.LayoutTransform>
        <DockPanel Background="red" Width="100" Height="100" />
    </Decorator>
    <Decorator>
        <Decorator.LayoutTransform>
            <TransformGroup>
                <TransformGroup.Children>
                    <TransformCollection>
                        <SkewTransform AngleX="-10" />
                        <SkewTransform AngleY="-20" />
                    </TransformCollection>
                </TransformGroup.Children>
            </TransformGroup>
        </Decorator.LayoutTransform>
        <DockPanel Background="blue" Width="100" Height="100" />
    </Decorator>
</DockPanel>
