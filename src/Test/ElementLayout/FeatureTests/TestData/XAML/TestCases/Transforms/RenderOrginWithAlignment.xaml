<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" ShowGridLines="false" Width="350" Height="350" Background="lightyellow">
    <Grid.ColumnDefinitions>
    <ColumnDefinition />
    <ColumnDefinition />
    <ColumnDefinition />
    <ColumnDefinition />
    <ColumnDefinition />
    <ColumnDefinition />
    <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
    <RowDefinition />
    <RowDefinition />
    <RowDefinition />
    <RowDefinition />
    <RowDefinition />
    <RowDefinition />
    <RowDefinition />
    </Grid.RowDefinitions>
    <Rectangle Grid.Column="3" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0, 0" Width="10" Height="10" Fill="Red">
        <Rectangle.RenderTransform>
            <ScaleTransform ScaleX="5" ScaleY="5" />
        </Rectangle.RenderTransform>
    </Rectangle>
    <Rectangle Grid.Column="3" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1,1" Width="10" Height="10" Fill="Orange">
        <Rectangle.RenderTransform>
            <ScaleTransform ScaleX="5" ScaleY="5" />
        </Rectangle.RenderTransform>
    </Rectangle>
    <Rectangle Grid.Column="3" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" Width="10" Height="10" Fill="Yellow">
        <Rectangle.RenderTransform>
            <ScaleTransform ScaleX="3" ScaleY="3" />
        </Rectangle.RenderTransform>
    </Rectangle>
    <Rectangle Grid.Column="3" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" RenderTransformOrigin="2,2" Width="10" Height="10" Fill="YellowGreen">
        <Rectangle.RenderTransform>
            <ScaleTransform ScaleX="2" ScaleY="2" />
        </Rectangle.RenderTransform>
    </Rectangle>
    <Rectangle Grid.Column="3" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Bottom" RenderTransformOrigin="1,0" Width="10" Height="10" Fill="green">
        <Rectangle.RenderTransform>
            <ScaleTransform ScaleX="2" ScaleY="2" />
        </Rectangle.RenderTransform>
    </Rectangle>
    <Rectangle Grid.Column="3" Grid.Row="3" Width="10" Height="10" Fill="Black" />
</Grid>
