<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    <Decorator Width="200" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Decorator.RenderTransform>
            <TransformGroup>
                <TransformGroup.Children>
                    <TransformCollection>
                        <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                        <TranslateTransform X="100" Y="100" />
                    </TransformCollection>
                </TransformGroup.Children>
            </TransformGroup>
        </Decorator.RenderTransform>
        <Canvas Background="lightblue" Width="100" Height="100">
            <TextBlock>SkewX 4.9</TextBlock>
        </Canvas>
    </Decorator>
    <Decorator Grid.Column="1" Width="200" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Decorator.RenderTransform>
            <TransformGroup>
                <TransformGroup.Children>
                    <TransformCollection>
                        <ScaleTransform ScaleX="2.0" ScaleY="2.0" />
                        <TranslateTransform X="200" Y="200" />
                    </TransformCollection>
                </TransformGroup.Children>
            </TransformGroup>
        </Decorator.RenderTransform>
        <Canvas Background="lightgreen" Width="100" Height="100">
            <TextBlock>SkewY -6.0</TextBlock>
        </Canvas>
    </Decorator>
</Grid>
