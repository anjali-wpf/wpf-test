<DockPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="white">
    <Decorator>
        <Decorator.RenderTransform>
            <TransformGroup>
                <TransformGroup.Children>
                    <TransformCollection>
                        <SkewTransform AngleX="10" />
                        <SkewTransform AngleY="20" />
                        <TranslateTransform X="100" Y="100" />
                    </TransformCollection>
                </TransformGroup.Children>
            </TransformGroup>
        </Decorator.RenderTransform>
        <DockPanel Background="red" Width="100" Height="100" />
    </Decorator>
    <Decorator>
        <Decorator.RenderTransform>
            <TransformGroup>
                <TransformGroup.Children>
                    <TransformCollection>
                        <SkewTransform AngleX="-10" />
                        <SkewTransform AngleY="-20" />
                        <TranslateTransform X="300" Y="300" />
                    </TransformCollection>
                </TransformGroup.Children>
            </TransformGroup>
        </Decorator.RenderTransform>
        <DockPanel Background="blue" Width="100" Height="100" />
    </Decorator>
</DockPanel>
