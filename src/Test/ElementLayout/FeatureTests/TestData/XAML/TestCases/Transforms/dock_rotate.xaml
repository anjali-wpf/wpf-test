<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="white" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid.ColumnDefinitions>
    <ColumnDefinition />
    <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
    <RowDefinition />
    <RowDefinition />
    </Grid.RowDefinitions>
    <Decorator Width="300" Height="300">
        <Decorator.LayoutTransform>
            <RotateTransform Angle="45" CenterX="100" CenterY="100" />
        </Decorator.LayoutTransform>
        <DockPanel Background="lightblue" Width="200" Height="200">
            <TextBlock>Rotate at 45</TextBlock>
        </DockPanel>
    </Decorator>
    <Decorator Width="300" Height="300" Grid.Column="1">
        <Decorator.LayoutTransform>
            <RotateTransform Angle="190" CenterX="200" CenterY="200" />
        </Decorator.LayoutTransform>
        <DockPanel Background="lightgreen" Width="200" Height="200">
            <TextBlock>Rotate at 190</TextBlock>
        </DockPanel>
    </Decorator>
    <Decorator Width="300" Height="300" Grid.Row="1">
        <Decorator.LayoutTransform>
            <RotateTransform Angle="-45" CenterX="300" CenterY="300" />
        </Decorator.LayoutTransform>
        <DockPanel Background="pink" Width="200" Height="200">
            <TextBlock>Rotate at -45</TextBlock>
        </DockPanel>
    </Decorator>
</Grid>
