<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="white">
    <Decorator>
        <Canvas Background="lightblue" Width="100" Height="100" />
    </Decorator>
    <Decorator>
        <Decorator.LayoutTransform>
            <ScaleTransform ScaleX="-2" ScaleY="-2" />
        </Decorator.LayoutTransform>
        <Canvas Background="lightgreen" Width="100" Height="100" />
    </Decorator>
    <Decorator>
        <Decorator.LayoutTransform>
            <ScaleTransform ScaleX="1" ScaleY="1" />
        </Decorator.LayoutTransform>
        <Canvas Background="pink" Width="100" Height="100" />
    </Decorator>
</Canvas>
