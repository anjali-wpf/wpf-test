<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    <StackPanel Name="testpanel" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal">
        <Path Data="M 10,10 L 100,100" Stroke="Black" StrokeThickness="4">
            <Path.LayoutTransform>
                <RotateTransform Angle="41" />
            </Path.LayoutTransform>
        </Path>
        <Path Data="M 10,10 L 100,100" Stroke="Black" StrokeThickness="4">
            <Path.LayoutTransform>
                <TransformGroup>
                    <TransformGroup.Children>
                        <TransformCollection>
                            <SkewTransform AngleX="20" />
                            <SkewTransform AngleY="20" />
                        </TransformCollection>
                    </TransformGroup.Children>
                </TransformGroup>
            </Path.LayoutTransform>
        </Path>
        <Path Data="M 10,10 L 100,100" Stroke="Black" StrokeThickness="4">
            <Path.LayoutTransform>
                <ScaleTransform ScaleX="4" ScaleY="4" />
            </Path.LayoutTransform>
        </Path>
        <Path Data="M 10,10 L 100,100" Stroke="Black" StrokeThickness="4">
            <Path.RenderTransform>
                <RotateTransform Angle="-25" />
            </Path.RenderTransform>
        </Path>
        <Path Data="M 10,10 L 100,100" Stroke="Black" StrokeThickness="4">
            <Path.RenderTransform>
                <TransformGroup>
                    <TransformGroup.Children>
                        <TransformCollection>
                            <SkewTransform AngleX="45" />
                            <SkewTransform AngleY="-9" />
                        </TransformCollection>
                    </TransformGroup.Children>
                </TransformGroup>
            </Path.RenderTransform>
        </Path>
        <Path Data="M 10,10 L 100,100" Stroke="Black" StrokeThickness="4">
            <Path.RenderTransform>
                <ScaleTransform ScaleX="4" ScaleY="4" />
            </Path.RenderTransform>
        </Path>
        <Path Data="M 10,10 L 200,200" Stroke="Black" StrokeThickness="4">
            <Path.RenderTransform>
                <TranslateTransform X="100" Y="-100" />
            </Path.RenderTransform>
        </Path>
    </StackPanel>
</Grid>
