		<Line
   X1="0" Y1="0"
   X2="100" Y2="100"
   Stroke="Black"
   StrokeThickness="4"
   Grid.Column="1" Grid.Row="0" />

		<Line
   X1="0" Y1="0"
   X2="100" Y2="100"
   Stroke="Black"
   StrokeThickness="4"
   Grid.Column="0" Grid.Row="1" />

		<Line
   X1="0" Y1="0"
   X2="100" Y2="100"
   Stroke="Black"
   StrokeThickness="4"
