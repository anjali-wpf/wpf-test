<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    <StackPanel Name="testpanel" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
        <ListBox>
            <ListBox.LayoutTransform>
                <RotateTransform Angle="41" />
            </ListBox.LayoutTransform>
            <ListBoxItem TextElement.Foreground="Black" TextElement.FontFamily="Lucida Console" TextElement.FontWeight="Normal" TextElement.FontStyle="Normal" TextElement.FontSize="12" Content="listbox / listbox item" />
        </ListBox>
        <ListBox>
            <ListBox.LayoutTransform>
                <TransformGroup>
                    <TransformGroup.Children>
                        <TransformCollection>
                            <SkewTransform AngleX="20" />
                            <SkewTransform AngleY="20" />
                        </TransformCollection>
                    </TransformGroup.Children>
                </TransformGroup>
            </ListBox.LayoutTransform>
            <ListBoxItem TextElement.Foreground="Black" TextElement.FontFamily="Lucida Console" TextElement.FontWeight="Normal" TextElement.FontStyle="Normal" TextElement.FontSize="12" Content="listbox / listbox item" />
        </ListBox>
        <ListBox>
            <ListBox.LayoutTransform>
                <ScaleTransform ScaleX="4" ScaleY="4" />
            </ListBox.LayoutTransform>
            <ListBoxItem TextElement.Foreground="Black" TextElement.FontFamily="Lucida Console" TextElement.FontWeight="Normal" TextElement.FontStyle="Normal" TextElement.FontSize="12" Content="listbox / listbox item" />
        </ListBox>
        <ListBox>
            <ListBox.RenderTransform>
                <RotateTransform Angle="-25" />
            </ListBox.RenderTransform>
            <ListBoxItem TextElement.Foreground="Black" TextElement.FontFamily="Lucida Console" TextElement.FontWeight="Normal" TextElement.FontStyle="Normal" TextElement.FontSize="12" Content="listbox / listbox item" />
        </ListBox>
        <ListBox>
            <ListBox.RenderTransform>
                <TransformGroup>
                    <TransformGroup.Children>
                        <TransformCollection>
                            <SkewTransform AngleX="45" />
                            <SkewTransform AngleY="-9" />
                        </TransformCollection>
                    </TransformGroup.Children>
                </TransformGroup>
            </ListBox.RenderTransform>
            <ListBoxItem TextElement.Foreground="Black" TextElement.FontFamily="Lucida Console" TextElement.FontWeight="Normal" TextElement.FontStyle="Normal" TextElement.FontSize="12" Content="listbox / listbox item" />
        </ListBox>
        <ListBox>
            <ListBox.RenderTransform>
                <ScaleTransform ScaleX="4" ScaleY="4" />
            </ListBox.RenderTransform>
            <ListBoxItem TextElement.Foreground="Black" TextElement.FontFamily="Lucida Console" TextElement.FontWeight="Normal" TextElement.FontStyle="Normal" TextElement.FontSize="12" Content="listbox / listbox item" />
        </ListBox>
        <ListBox>
            <ListBox.RenderTransform>
                <TranslateTransform X="100" Y="-100" />
            </ListBox.RenderTransform>
            <ListBoxItem TextElement.Foreground="Black" TextElement.FontFamily="Lucida Console" TextElement.FontWeight="Normal" TextElement.FontStyle="Normal" TextElement.FontSize="12" Content="listbox / listbox item" />
        </ListBox>
    </StackPanel>
</Grid>
