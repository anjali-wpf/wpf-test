<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">

	<Grid Name="testpanel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="300">
		<Grid.ColumnDefinitions>
		<ColumnDefinition Width="100" />
		<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
		<RowDefinition Height="100" />
		<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<ScrollBar Orientation="Horizontal" Grid.Column="0" Grid.Row="0" />
		<ScrollBar Orientation="Horizontal" Grid.Column="0" Grid.Row="1" />
		<ScrollBar Orientation="Horizontal" Grid.Column="1" Grid.Row="0" />
		<ScrollBar Orientation="Horizontal" Grid.Column="1" Grid.Row="1" />
	</Grid>

</Grid>
