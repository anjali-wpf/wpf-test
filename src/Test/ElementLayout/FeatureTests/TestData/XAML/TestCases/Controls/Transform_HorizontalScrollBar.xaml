<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    <StackPanel Name="testpanel" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
        <ScrollBar Orientation="Horizontal" Width="100">
            <ScrollBar.LayoutTransform>
                <RotateTransform Angle="41" />
            </ScrollBar.LayoutTransform>
        </ScrollBar>
        <ScrollBar Orientation="Horizontal" Width="100">
            <ScrollBar.LayoutTransform>
                <TransformGroup>
                    <TransformGroup.Children>
                        <TransformCollection>
                            <SkewTransform AngleX="20" />
                            <SkewTransform AngleY="20" />
                        </TransformCollection>
                    </TransformGroup.Children>
                </TransformGroup>
            </ScrollBar.LayoutTransform>
        </ScrollBar>
        <ScrollBar Orientation="Horizontal" Width="100">
            <ScrollBar.LayoutTransform>
                <ScaleTransform ScaleX="4" ScaleY="4" />
            </ScrollBar.LayoutTransform>
        </ScrollBar>
        <ScrollBar Orientation="Horizontal" Width="100">
            <ScrollBar.RenderTransform>
                <RotateTransform Angle="-25" />
            </ScrollBar.RenderTransform>
        </ScrollBar>
        <ScrollBar Orientation="Horizontal" Width="100">
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <TransformGroup.Children>
                        <TransformCollection>
                            <SkewTransform AngleX="45" />
                            <SkewTransform AngleY="-9" />
                        </TransformCollection>
                    </TransformGroup.Children>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>
        <ScrollBar Orientation="Horizontal" Width="100">
            <ScrollBar.RenderTransform>
                <ScaleTransform ScaleX="4" ScaleY="4" />
            </ScrollBar.RenderTransform>
        </ScrollBar>
        <ScrollBar Orientation="Horizontal" Width="100">
            <ScrollBar.RenderTransform>
                <TranslateTransform X="100" Y="-100" />
            </ScrollBar.RenderTransform>
        </ScrollBar>
    </StackPanel>
</Grid>
