<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" UseLayoutRounding="True" TextBlock.FontSize="14">
  <Grid.RowDefinitions>
    <RowDefinition/>
    <RowDefinition/>
    <RowDefinition/>
    <RowDefinition/>
  </Grid.RowDefinitions>
  <Grid.ColumnDefinitions>
    <ColumnDefinition />
    <ColumnDefinition />
    <ColumnDefinition />
  </Grid.ColumnDefinitions>
  <Button Name="btn1" Content="{Binding ElementName=btn1, Path=ActualHeight, UpdateSourceTrigger=PropertyChanged}" Grid.RowSpan="3"/>
  <Button Name="btn2" Content="{Binding ElementName=btn2, Path=ActualWidth, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"/>
  <Button Name="btn3" Content="{Binding ElementName=btn3, Path=ActualHeight, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="2"/>
  <Button Name="btn4" Content="{Binding ElementName=btn4, Path=ActualHeight, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2"/>
  <Button Name="btn5" Content="{Binding ElementName=btn5, Path=ActualWidth, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3"/>
</Grid>
