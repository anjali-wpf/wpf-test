<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" UseLayoutRounding="True" TextBlock.FontSize="14">
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width=".5*"/>
    <ColumnDefinition Width="auto"/>
    <ColumnDefinition Width="*"/>
  </Grid.ColumnDefinitions>
  <Grid.RowDefinitions>
    <RowDefinition />
    <RowDefinition />
  </Grid.RowDefinitions>
  <Button Name="btn1" Content="{Binding ElementName=btn1, Path=ActualWidth, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1"/>
  <Button Name="btn2" Content="Auto" Grid.Column="1"/>
  <Button Name="btn3" Content="{Binding ElementName=btn3, Path=ActualWidth, UpdateSourceTrigger=PropertyChanged}" Grid.Column="2"/>
</Grid>
