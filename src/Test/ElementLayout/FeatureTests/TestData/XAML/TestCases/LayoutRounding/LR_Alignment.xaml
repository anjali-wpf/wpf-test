<Border xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" UseLayoutRounding="True">
  <StackPanel Width="500" TextBlock.FontFamily="Georgia" TextBlock.FontSize="12">
    <TextBlock HorizontalAlignment="Right" Text="TextBlock Line 1 HA= Right" Background="LightBlue"/>
    <TextBlock HorizontalAlignment="Center" Text="Line 2 HorizontalAlignment = Center" Background="Pink"/>
    <TextBlock HorizontalAlignment="Left" Text="Line 1 HA= Left" Background="Tan"/>
    <Border BorderThickness="2" BorderBrush="Black">
      <Canvas HorizontalAlignment="Right" Width="50.5" Height="50.6" Background="Green"/>
    </Border>
    <Canvas HorizontalAlignment="Left" Width="150.1" Height="50.6" Background="Blue"/>
    <StackPanel Background="LightYellow" Width="200" Height="60">
      <Grid Background="Yellow" Width="70" Height="40" VerticalAlignment="Bottom"/>
    </StackPanel>
    <DockPanel Height="180" Background="Pink">
      <Canvas Width="50.5" Height="50.6" Background="Green" DockPanel.Dock="Top"/>
      <Canvas Width="50.5" Height="50.6" Background="Green" DockPanel.Dock="Right"/>
      <Canvas Width="50.5" Height="50.6" Background="Green" DockPanel.Dock="Left"/>
      <Canvas Width="50.5" Height="50.6" Background="Green" DockPanel.Dock="Bottom"/>
    </DockPanel>
    <TextBlock Text="HA Right" HorizontalAlignment="Right"/>
    <TextBlock Text="HA Center" HorizontalAlignment="Center"/>
    <TextBlock Text="HA Left" HorizontalAlignment="Left"/>
    <TextBlock Text="TA Right" TextAlignment="Right"/>
    <TextBlock Text="TA Center" TextAlignment="Center"/>
    <TextBlock Text="TA Left" TextAlignment="Left"/>
    <TextBlock Text="TA This is Text that is justified." TextAlignment="Justify" Background="LightBlue" Width="160.5"/>
  </StackPanel>
</Border>

