<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" UseLayoutRounding="True" TextBlock.FontSize="14">
  <Grid.RowDefinitions>
    <RowDefinition Height="2*"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="*"/>
  </Grid.RowDefinitions>
  <Grid.ColumnDefinitions>
    <ColumnDefinition/>
    <ColumnDefinition/>
  </Grid.ColumnDefinitions>
  <Button Name="btn1" Content="{Binding ElementName=btn1, Path=ActualHeight, UpdateSourceTrigger=PropertyChanged}"/>
  <Button Name="btn2" Content="{Binding ElementName=btn2, Path=ActualHeight, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1"/>
  <Button Name="btn3" Content="{Binding ElementName=btn3, Path=ActualHeight, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="2"/>
</Grid>
