<StackPanel Orientation="Horizontal"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 Background="DarkGray"
 HorizontalAlignment="Center"
 VerticalAlignment="Center">

	<Border BorderThickness="5" BorderBrush="Navy">
		<Viewbox Stretch="Fill" Height="200" Width="200" Visibility="Collapsed">
			<Border Height="100" Width="100" Background="CornflowerBlue" />
		</Viewbox>
	</Border>
	<Border BorderThickness="5" BorderBrush="Navy">
		<Viewbox Stretch="Fill" Height="200" Width="200" Visibility="Visible">
			<Border Height="100" Width="100" Background="CornflowerBlue" />
		</Viewbox>
	</Border>
	<Border BorderThickness="5" BorderBrush="Navy">
		<Viewbox Stretch="Fill" Height="200" Width="200" Visibility="Hidden">
			<Border Height="100" Width="100" Background="CornflowerBlue" />
		</Viewbox>
	</Border>

</StackPanel>
