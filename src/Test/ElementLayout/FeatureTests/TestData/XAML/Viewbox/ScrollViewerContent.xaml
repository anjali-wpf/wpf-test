<Grid Background="LightGray" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border BorderThickness="2" BorderBrush="Navy" HorizontalAlignment="Center" VerticalAlignment="Center">

        <Viewbox Height="300" Width="500" Stretch="Uniform">

            <ScrollViewer Height="100" Width="100" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible">
                <StackPanel>
                    <Border Background="Blue" CornerRadius="25" Height="25"></Border>
                    <Border Background="Yellow" CornerRadius="25" Height="25"></Border>
                    <Border Background="Green" CornerRadius="25" Height="25"></Border>
                    <Border Background="Blue" CornerRadius="25" Height="25"></Border>
                    <Border Background="Yellow" CornerRadius="25" Height="25"></Border>
                    <Border Background="Green" CornerRadius="25" Height="25"></Border>
                    <Border Background="Blue" CornerRadius="25" Height="25"></Border>
                    <Border Background="Yellow" CornerRadius="25" Height="25"></Border>
                    <Border Background="Green" CornerRadius="25" Height="25"></Border>
                </StackPanel>
            </ScrollViewer>
            
        </Viewbox>

    </Border>

</Grid>
