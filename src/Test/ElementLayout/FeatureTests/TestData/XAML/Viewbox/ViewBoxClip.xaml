<StackPanel Orientation="Horizontal"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 Background="DarkGray"
 HorizontalAlignment="Center"
 VerticalAlignment="Center">

	<Border BorderThickness="5" BorderBrush="Navy">
		<Viewbox Stretch="None" Height="200" Width="200" ClipToBounds="true">
			<Border Height="600" Width="600" Background="CornflowerBlue" />
		</Viewbox>
	</Border>

	<Border BorderThickness="5" BorderBrush="Navy">
		<Viewbox Stretch="None" Height="200" Width="200">
		
			<Viewbox.Clip>
				<EllipseGeometry Center="100, 100" RadiusX="25" RadiusY="25" />
			</Viewbox.Clip>
		
			<Border Height="600" Width="600" Background="CornflowerBlue" />
		</Viewbox>
	</Border>
	
</StackPanel>
