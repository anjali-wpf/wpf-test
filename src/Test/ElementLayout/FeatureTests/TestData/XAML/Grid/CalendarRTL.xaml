                <Setter Property="Margin" Value="0,4,4,4" />
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="VerticalAlignment" Value="Top" />
            </Style>
        </Grid.Resources>
        <!-- this column will receive all remaining width -->
