<Grid Name="testpanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Height="400" Width="400"
    Background="orange">

  <Grid.ColumnDefinitions>
    <ColumnDefinition />
    <ColumnDefinition />
  </Grid.ColumnDefinitions>
  <Grid.RowDefinitions>
    <RowDefinition />
    <RowDefinition />
  </Grid.RowDefinitions>

  <Grid Margin="20">

    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>

    <Rectangle Margin="10" Fill="red" />
    <Rectangle Margin="10" Fill="red" Grid.Row="0" Grid.Column="1"/>
    <Rectangle Margin="10" Fill="red" Grid.Row="1" Grid.Column="0"/>
    <Rectangle Margin="10" Fill="red" Grid.Row="1" Grid.Column="1"/>


  </Grid>

</Grid>