<!-- Testing Grid.ColumnSpan=3 & Grid.RowSpan=4 -->
<!-- Red Rectangle should appears on the 2nd Column & Row and spanning through 3 Columns and 4 Rows.  -->

<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top">
	<Grid.ColumnDefinitions>
	<ColumnDefinition Width="100px" />
	<ColumnDefinition Width="100px" />
	<ColumnDefinition Width="100px" />
	<ColumnDefinition Width="100px" />
	<ColumnDefinition Width="100px" />
	</Grid.ColumnDefinitions>
	<Grid.RowDefinitions>
	<RowDefinition Height="100px" />
	<RowDefinition Height="100px" />
	<RowDefinition Height="100px" />
	<RowDefinition Height="100px" />
	<RowDefinition Height="100px" />
	</Grid.RowDefinitions>
	

	
	<Rectangle
  Grid.Column="1" Grid.Row="1"
  Grid.ColumnSpan="3" Grid.RowSpan="4"
  Fill="Blue" />	

</Grid>	
