<Grid Name="testpanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Height="400" Width="400"
    Background="orange">

  <Grid.ColumnDefinitions>
    <ColumnDefinition />
    <ColumnDefinition />
  </Grid.ColumnDefinitions>
  <Grid.RowDefinitions>
    <RowDefinition />
    <RowDefinition />
  </Grid.RowDefinitions>

  <DockPanel Margin="0,0,25,25">


    <Rectangle Margin="3" Width="50" Fill="red" DockPanel.Dock="Left" />
    <Rectangle Margin="3" Height="50" Fill="red" DockPanel.Dock="Top"/>
    <Rectangle Margin="3" Width="50" Fill="red" DockPanel.Dock="Right"/>
    <Rectangle Margin="3" Height="50" Fill="red" DockPanel.Dock="Bottom"/>
    <Rectangle Margin="3" Fill="red" />


  </DockPanel>

</Grid>