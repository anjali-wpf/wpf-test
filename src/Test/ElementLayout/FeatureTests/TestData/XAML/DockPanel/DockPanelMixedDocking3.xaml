<Grid Background="White" Name="myDock" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">

<DockPanel HorizontalAlignment="Left" VerticalAlignment="Top" LastChildFill="true" Background="LightBlue">

	<Border DockPanel.Dock="Left" Background="Brown">
		<Border Height="25" Width="25" />
	</Border>
	<Border DockPanel.Dock="Right" Background="LawnGreen">
		<Border Height="25" Width="25" />
	</Border>
	<Border DockPanel.Dock="Top" Background="RoyalBlue">
		<Border Height="25" Width="25" />
	</Border>
	<Border DockPanel.Dock="Bottom" Background="Crimson">
		<Border Height="25" Width="25" />
	</Border>
	<Border Background="Gold">
		<Border Height="25" Width="25" />
	</Border>


</DockPanel>

</Grid>
