<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    ShowGridLines="true"
> 
<Grid.ColumnDefinitions>
<ColumnDefinition />
<ColumnDefinition />
</Grid.ColumnDefinitions>

<Canvas Width="200" Height="200" Background="Yellow" Margin="100" Name="Canvas1">
	<Rectangle Width="100" Height="100" Fill="Orange"
  Canvas.Left="-50" Canvas.Top="-50" />
	<Rectangle Width="100" Height="100" Fill="Green"
  Canvas.Left="150" Canvas.Top="150" />
</Canvas>

<Canvas Width="200" Height="200" Background="Yellow" Margin="100" Name="Canvas2"
 Grid.Column="1" ClipToBounds="True">
	<Rectangle Width="100" Height="100" Fill="Orange"
  Canvas.Left="-50" Canvas.Top="-50" />
	<Rectangle Width="100" Height="100" Fill="Green"
  Canvas.Left="150" Canvas.Top="150" />
</Canvas>
</Grid>
