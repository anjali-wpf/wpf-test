<!-- VirtualizingStackPanel Case.  Horizontal Orientation -->
<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="LightGray">

    <ItemsControl>
        <ItemsControl.Style>
            <Style TargetType="{x:Type ItemsControl}">
                <Setter Property="Template">
                    
                        <ControlTemplate>
                            <VirtualizingStackPanel Height="300" Width="300" Orientation="Horizontal" IsItemsHost="true" />
                        </ControlTemplate>
                    
                </Setter>
            </Style>
        </ItemsControl.Style>
        <ItemsControl.Items>
            <Border Width="50" Height="50" Background="Crimson" />
            <Border Width="50" Height="50" Background="Orange" />
            <Border Width="50" Height="50" Background="Green" />
            <Border Width="50" Height="50" Background="Yellow" />
            <Border Width="50" Height="50" Background="Crimson" />
            <Border Width="50" Height="50" Background="Orange" />
            <Border Width="50" Height="50" Background="Green" />
            <Border Width="50" Height="50" Background="Yellow" />
            <Border Width="50" Height="50" Background="Crimson" />
            <Border Width="50" Height="50" Background="Orange" />
            <Border Width="50" Height="50" Background="Green" />
            <Border Width="50" Height="50" Background="Yellow" />
            <Border Width="50" Height="50" Background="Crimson" />
            <Border Width="50" Height="50" Background="Orange" />
            <Border Width="50" Height="50" Background="Green" />
            <Border Width="50" Height="50" Background="Yellow" />
            <Border Width="50" Height="50" Background="Crimson" />
            <Border Width="50" Height="50" Background="Orange" />
            <Border Width="50" Height="50" Background="Green" />
            <Border Width="50" Height="50" Background="Yellow" />
            <Border Width="50" Height="50" Background="Crimson" />
            <Border Width="50" Height="50" Background="Orange" />
            <Border Width="50" Height="50" Background="Green" />
            <Border Width="50" Height="50" Background="Yellow" />
        </ItemsControl.Items>
    </ItemsControl>

</Grid>
