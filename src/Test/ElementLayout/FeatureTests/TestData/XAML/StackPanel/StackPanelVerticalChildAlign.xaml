<!-- StackPanel Case.  Vertical Orientation with Horizontal Alignments on Child -->
<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    
    <Grid.Resources>
        <Style xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="LimeGreen" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="BorderBrush" Value="DarkGreen" />
        </Style>
        <Style xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" TargetType="{x:Type TextBlock}">
            <Setter Property="Text" Value="Text" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="FontSize" Value="40" />
          <Setter Property="FontFamily" Value="Tahoma" />
        </Style>
    </Grid.Resources>
    
    <StackPanel Orientation="Vertical" Height="300" Width="300" Background="CornflowerBlue">
        <Border HorizontalAlignment="Stretch">
            <TextBlock />
        </Border>
        <Border HorizontalAlignment="Left">
            <TextBlock />
        </Border>
        <Border HorizontalAlignment="Center">
            <TextBlock />
        </Border>
        <Border HorizontalAlignment="Right">
            <TextBlock />
        </Border>
    </StackPanel>
    
</Grid>
